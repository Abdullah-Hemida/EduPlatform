@model Edu.Web.ViewModels.OnlineCoursePublicDetailsVm
@using Edu.Infrastructure.Helpers
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="d-flex align-items-center mb-4">
        <div>
            <h2 class="mb-0">@Model.Title</h2>
            <div class="small text-muted">@Model.Description</div>
        </div>
        <div class="ms-auto">
            <a asp-controller="OnlineSchool" asp-action="Index" class="btn btn-outline-secondary btn-sm">@(L["Back"] ?? "Back")</a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
    {
        <div class="mb-4">
            <img src="@Model.CoverImageUrl" class="rounded w-100" style="height:300px;object-fit:cover" alt="@Model.Title" />
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="mb-3">
                <h5 class="mb-3">@(L["OnlineCourse.Lessons"] ?? "Lessons")</h5>

                @if (Model.Lessons == null || !Model.Lessons.Any())
                {
                    <div class="text-muted">@(L["OnlineCourse.NoLessons"] ?? "No lessons available")</div>
                }
                else
                {
                    @foreach (var lesson in Model.Lessons)
                    {
                        var ytId = YouTubeHelper.ExtractYouTubeId(lesson.RecordedVideoUrl);
                        var embedUrl = !string.IsNullOrEmpty(ytId) ? $"https://www.youtube-nocookie.com/embed/{ytId}?rel=0" : null;

                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex align-items-start">
                                    <div class="me-3">
                                        <div class="badge bg-primary rounded-pill">@lesson.Order</div>
                                    </div>

                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-start justify-content-between">
                                            <h6 class="mb-1">@lesson.Title</h6>
                                            <span class="small text-muted">@(!string.IsNullOrEmpty(lesson.ScheduledUtc?.ToString()) ? lesson.ScheduledUtc?.ToLocalTime().ToString("g") : "")</span>
                                        </div>

                                        <div class="mt-2">
                                            @if (!string.IsNullOrEmpty(embedUrl))
                                            {
                                                <div class="ratio ratio-16x9 mb-3">
                                                    <iframe src="@embedUrl" frameborder="0" loading="lazy"
                                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                                            allowfullscreen></iframe>
                                                </div>
                                            }
                                            else if (!string.IsNullOrEmpty(lesson.MeetUrl))
                                            {
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="min-height:150px;">
                                                    <small class="text-muted">@(L["ReactiveCourse.Live"] ?? "Live")</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="min-height:150px;">
                                                    <small class="text-muted">@(L["ReactiveCourse.NoSchedule"] ?? "No schedule")</small>
                                                </div>
                                            }
                                        </div>

                                        @if (!string.IsNullOrEmpty(lesson.Notes))
                                        {
                                            <div class="mt-2">
                                                <h6 class="mb-1">@(L["Description"] ?? "Description")</h6>
                                                <p class="text-muted small mb-0">@lesson.Notes</p>
                                            </div>
                                        }

                                        @if (lesson.Files?.Any() == true)
                                        {
                                            <div class="mt-3">
                                                <h6 class="mb-1">@L["Admin.Files"]</h6>
                                                <ul class="list-group list-group-flush">
                                                    @foreach (var f in lesson.Files)
                                                    {
                                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                                            <div><i class="fas fa-file me-2"></i>@f.FileName</div>
                                                            @if (!string.IsNullOrEmpty(f.PublicUrl))
                                                            {
                                                                <a class="btn btn-sm btn-outline-primary" href="@f.PublicUrl" target="_blank">@L["Button.View"]</a>
                                                            }
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <aside class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="mb-2">@(L["OnlineCourse.Info"] ?? "Course info")</h6>

                    <dl class="row small">
                        <dt class="col-6 text-muted">@(L["Admin.Level"] ?? "Level")</dt>
                        <dd class="col-6 text-end">@Model.LevelName ?? Model.LevelId.ToString()</dd>

                        <dt class="col-6 text-muted">@(L["ReactiveCourse.Duration"] ?? "Duration")</dt>
                        <dd class="col-6 text-end">@Model.DurationMonths @(L["ReactiveCourse.Months"] ?? "months")</dd>

                        <dt class="col-6 text-muted">@(L["OnlineCourse.PricePerMonth"] ?? "Price")</dt>
                        <dd class="col-6 text-end">@Model.PricePerMonthLabel</dd>
                    </dl>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h6 class="mb-2">@(L["OnlineCourse.Introduction"] ?? "Introduction")</h6>
                    @if (!string.IsNullOrEmpty(Model.IntroductionVideoUrl))
                    {
                        var introYt = YouTubeHelper.ExtractYouTubeId(Model.IntroductionVideoUrl);
                        var introEmbed = !string.IsNullOrEmpty(introYt) ? $"https://www.youtube-nocookie.com/embed/{introYt}?rel=0" : null;
                        if (!string.IsNullOrEmpty(introEmbed))
                        {
                            <div class="ratio ratio-16x9">
                                <iframe src="@introEmbed" loading="lazy" frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen></iframe>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-muted small">@(L["No"] ?? "No")</div>
                    }
                </div>
            </div>
        </aside>
    </div>
</div>


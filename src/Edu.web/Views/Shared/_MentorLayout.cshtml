@using System.Globalization
@using Edu.Domain.Entities
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Hosting
@inject Edu.Application.IServices.IFileStorageService Storage
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer
@inject UserManager<ApplicationUser> UserManager
@inject Edu.Infrastructure.Data.ApplicationDbContext Db


@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var dir = lang == "ar" ? "rtl" : "ltr";
    var userIsAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    ApplicationUser? currentUser = null;
    string? profileImageUrl = null;
    string? displayName = null;
    string? dashboardUrl = null;
    bool dashboardDisabled = false;
    bool showPendingBanner = false;
    string? defaultAvatarUrl = Url.Content("~/uploads/images/default-avatar.jpg");

    if (userIsAuthenticated)
    {
        try
        {
            currentUser = await UserManager.GetUserAsync(User);
            try
            {
                profileImageUrl = await Storage.GetPublicUrlAsync(currentUser.PhotoStorageKey);
            }
            catch
            {
                profileImageUrl = null;
            }

            if (!string.IsNullOrEmpty(currentUser?.FullName))
            {
                var names = currentUser!.FullName.Split(' ');
                displayName = names.Length > 0 ? names[0] : currentUser.UserName;
            }
            else
            {
                displayName = currentUser?.UserName ?? User.Identity?.Name;
            }

            // Determine dashboard link and teacher status only after we have currentUser
            if (User.IsInRole("Admin"))
            {
                dashboardUrl = Url.Action("Index", "Dashboard", new { area = "Admin" });
            }
            else if (User.IsInRole("Teacher") && currentUser != null)
            {
                // get teacher record
                var teacher = await Db.Teachers.FindAsync(currentUser.Id);
                if (teacher != null)
                {
                    if (teacher.Status == TeacherStatus.Approved)
                    {
                        dashboardUrl = Url.Action("Index", "Dashboard", new { area = "Teacher" });
                    }
                    else
                    {
                        // teacher exists but not approved -> disable link and show pending banner for Pending status
                        dashboardUrl = "#";
                        dashboardDisabled = true;
                        if (teacher.Status == TeacherStatus.Pending)
                        {
                            showPendingBanner = true;
                        }
                    }
                }
                else
                {
                    // no teacher record (rare) — still show disabled link to indicate there's a dashboard
                    dashboardUrl = "#";
                    dashboardDisabled = true;
                }
            }
            else if (User.IsInRole("Student"))
            {
                dashboardUrl = Url.Action("MyPurchases", "PrivateCourses", new { area = "Student" });
            }
        }
        catch (Exception ex)
        {
            // optionally log if you have logger available; degrade gracefully
            displayName = displayName ?? (User.Identity?.Name ?? "User");
            dashboardUrl = null;
            dashboardDisabled = false;
        }
    }
    // else: not authenticated -> dashboardUrl stays null
}

<!-- small CSS for disabled appearance -->
<style>
    .disabled-link {
        pointer-events: none;
        opacity: 0.5;
    }
</style>

<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName" dir="@ViewData["Direction"]">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Edu Platform</title>

    <!-- Bootstrap core CSS (from lib) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome (Icons) -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <!-- Localization (RTL/LTR support) -->
    @if (ViewData["Direction"]?.ToString() == "rtl")
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    }
    <!-- Custom Overrides -->
    <link rel="stylesheet" href="~/vendor/Mentor/css/mentor.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>

<body>   
    <nav id="header" class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top py-2">
        <div class="container-fluid px-3 px-md-4">

            <!-- Brand -->
            <a class="navbar-brand fw-bold d-flex align-items-center text-decoration-none order-1" href="/">
                <i class="fas fa-graduation-cap me-2 text-primary fa-lg"></i>
                <span class="brand-gradient">@Localizer["Site.Title"]</span>
            </a>

            <!-- Mobile toggle -->
            <button class="navbar-toggler border-0 order-2" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse order-3" id="mainNav">

                <!-- Centered navigation links -->
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-lg-2">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-3 text-nowrap">
                            <i class="fas fa-home me-1 text-muted"></i> @Localizer["Nav.Home"]
                        </a>
                    </li>

                    <li class="nav-item">
                        <a asp-area="" asp-controller="School" asp-action="Index" class="nav-link px-3 text-nowrap">
                            <i class="fas fa-school me-1 text-muted"></i> @Localizer["Nav.School"]
                        </a>
                    </li>

                    <!-- Dropdown for Courses when screen is small -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle px-3 text-nowrap" href="#" id="coursesDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-book-open me-1 text-muted"></i> @Localizer["Nav.Courses"]
                        </a>
                        <ul class="dropdown-menu shadow-sm border-0 rounded-3" style="width:180px;" aria-labelledby="coursesDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Teachers" asp-action="Index">
                                    <i class="fas fa-chalkboard-teacher me-2 text-success"></i> @Localizer["Nav.Teachers"]
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="PrivateCourses" asp-action="Index">
                                    <i class="fas fa-video me-2 text-danger"></i> @Localizer["Nav.RecordedCourses"]
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="ReactiveCourses" asp-action="Index">
                                    <i class="fas fa-people-group me-2 text-warning"></i> @Localizer["Nav.ReactiveCourses"]
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <!-- Right side items -->
                <ul class="navbar-nav ms-lg-auto align-items-lg-center gap-2">

                    <!-- Language Selector -->
                    <li class="nav-item me-lg-2">
                        @await Component.InvokeAsync("LanguageSelector", new { returnUrl = Context.Request.Path + Context.Request.QueryString })
                    </li>

                    @if (!userIsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link px-3 text-secondary" href="/Identity/Account/Login">
                                <i class="fas fa-sign-in-alt me-1"></i> @Localizer["Account.Login"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary btn-sm px-3 py-2 fw-semibold rounded-pill shadow-sm"
                               href="/Identity/Account/Register">
                                <i class="fas fa-user-plus me-1"></i> @Localizer["Account.Register"]
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center p-1" href="#" data-bs-toggle="dropdown">
                                <img src="@(profileImageUrl ?? defaultAvatarUrl)"
                                     class="rounded-circle me-2 shadow-sm" style="width: 36px; height: 36px; object-fit: cover;" />
                                <span class="fw-semibold text-dark">@displayName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 rounded-3">
                                <li>
                                    <a class="dropdown-item" href="/Identity/Account/Manage">
                                        <i class="fas fa-user-circle me-2 text-primary"></i> @Localizer["Nav.Profile"]
                                    </a>
                                </li>

                                @{
                                    // compute optional CSS class & attributes
                                    var dashboardCss = dashboardDisabled ? "disabled-link" : "";
                                    var ariaDisabled = dashboardDisabled ? "true" : "false";
                                    var tabIndex = dashboardDisabled ? "-1" : "0";
                                }

                                @if (!string.IsNullOrEmpty(dashboardUrl))
                                {
                                    <li>
                                        <a class="dropdown-item @dashboardCss" href="@dashboardUrl" aria-disabled="@ariaDisabled" tabindex="@tabIndex">
                                            <i class="fas fa-gauge me-2 text-success"></i>
                                            @Localizer["Nav.ControlPannel"]
                                        </a>
                                    </li>
                                }

                                <li><hr class="dropdown-divider my-1" /></li>
                                <li>
                                    <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt me-2"></i> @Localizer["Account.Logout"]
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    @{
        var teacherPendingMsg = TempData["TeacherPending"] as string;
        var profileSaved = TempData["ProfileSaved"] as string;
    }
    @if (!string.IsNullOrWhiteSpace(profileSaved))
    {
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @profileSaved
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    <!-- Pending banner shown to teachers after profile completion -->
    @if (showPendingBanner)
    {
        <div class="container mt-3">
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-hourglass-half me-2"></i>
                @Localizer["WelcomeTeacherPendingApproval"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
    <!-- Hero Section (outside main container) -->
    @RenderSection("Hero", required: false)

    <main role="main" class="container py-4">
        @RenderBody()
    </main>
    @await Component.InvokeAsync("Footer")

    <a href="#" class="scroll-top d-inline-flex align-items-center justify-content-center"
       role="button" aria-label="Scroll to top" tabindex="0">
        <i class="fas fa-arrow-up" aria-hidden="true"></i>
    </a>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap bundle (only one copy — keep this one) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Mentor theme JS (after bootstrap) -->
    <script src="~/vendor/mentor/js/mentor.js"></script>

    <!-- jQuery Validation (after jQuery) -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        // Smooth navbar scroll effect
        document.addEventListener('DOMContentLoaded', function () {
            const navbar = document.querySelector('.navbar');

            window.addEventListener('scroll', function () {
                if (window.scrollY > 10) {
                    navbar.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.15)';
                    navbar.style.background = 'rgba(255, 255, 255, 0.98)';
                } else {
                    navbar.style.boxShadow = '0 2px 15px rgba(0, 0, 0, 0.08)';
                    navbar.style.background = 'rgba(255, 255, 255, 0.95)';
                }
            });
        });
    </script>
</body>
</html>




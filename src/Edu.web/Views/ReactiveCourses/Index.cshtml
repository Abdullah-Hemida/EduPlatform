@model Edu.Web.ViewModels.ReactiveCourseIndexVm
@using System.Globalization
@inject Microsoft.Extensions.Localization.IStringLocalizer<Edu.Web.Resources.SharedResource> L
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx

@{
    ViewData["Title"] = L["Nav.ReactiveCourses"];
    var q = Model.Query ?? HttpCtx.HttpContext?.Request.Query["q"].ToString() ?? "";
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var dir = lang == "ar" ? "rtl" : "ltr";
    var textAlign = lang == "ar" ? "right" : "left";
}

<div class="d-flex align-items-center mb-3 justify-content-between" dir="@dir" style="text-align:@textAlign">
     <h2 class="mb-0">@L["Nav.ReactiveCourses"]</h2>
     <form method="get" class="d-flex" role="search" aria-label="@L["Search.Placeholder"]">
            <input name="q"
                   class="form-control form-control-sm"
                   style="width:300px;"
                   placeholder="@L["Search.Placeholder"]"
                   value="@q"
                   aria-label="@L["Search.Placeholder"]" />
            <button type="submit" class="btn btn-primary btn-sm ms-1 me-1">@L["button.Search"]</button>
     </form>
</div>

@if (!Model.Courses.Any())
{
    <div class="text-muted">@L["Admin.NoRecords"]</div>
}
else
{
    <div class="row g-3" dir="@dir" style="text-align:@textAlign">
        @foreach (var c in Model.Courses)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(c.CoverPublicUrl))
                    {
                        <img src="@c.CoverPublicUrl"
                             class="card-img-top"
                             alt="@c.Title"
                             style="height:180px;object-fit:cover" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@c.Title</h5>

                        <div class="mb-2">
                            <div class="small text-muted">@c.TeacherName</div>
                            <div class="small text-muted">@c.DurationMonths @L["ReactiveCourse.Months"]</div>
                        </div>

                        <p class="card-text text-truncate">@c.ShortDescription</p>

                        <div class="mt-auto d-flex align-items-center justify-content-between">
                            <div class="fw-semibold">@c.PricePerMonthLabel</div>
                            @if (User.Identity?.IsAuthenticated ?? true)
                            {
                                <a class="btn btn-outline-primary btn-sm"
                                   asp-area="Student"
                                   asp-controller="ReactiveEnrollments"
                                   asp-action="Details"
                                   asp-route-id="@c.Id">
                                    @L["View"]
                                </a>
                            }
                            else
                            {
                                <!-- anonymous: go to Identity Register page and include returnUrl back to course details -->
                                <a class="btn btn-primary btn-sm px-3 py-1 fw-semibold rounded-pill shadow-sm"
                                   href="/Identity/Account/Register">
                                    @L["Button.View"]
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}



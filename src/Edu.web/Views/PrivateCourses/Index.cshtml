@model Edu.Web.ViewModels.PrivateCourseIndexVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<Edu.Web.Resources.SharedResource> L
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx
@using System.Globalization

@{
    ViewData["Title"] = L["Nav.Courses"];
    var q = Model.Query ?? HttpCtx.HttpContext?.Request.Query["q"].ToString() ?? "";
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var dir = lang == "ar" ? "rtl" : "ltr";
    var textAlign = lang == "ar" ? "right" : "left";
}

<!-- Responsive header + filters (Bootstrap only) -->
<div class="row align-items-center justify-content-between mb-4" dir="@dir" style="text-align:@textAlign">

    <!-- Title -->
    <div class="col-12 col-md-auto mb-2 mb-md-0">
        <h2 class="h5 mb-1">@L["Nav.Courses"]</h2>
        <div class="small text-muted">@L["Nav.RecordedCourses"]</div>
    </div>

    <!-- Filters Form -->
    <div class="col-12 col-md-8 col-lg-6">
        <form method="get" asp-controller="PrivateCourses" asp-action="Index" class="w-100">

            <!-- Toggle button (only on small screens) -->
            <div class="d-md-none mb-2">
                <button class="btn btn-outline-secondary btn-sm w-100" 
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#courseFilters"
                        aria-expanded="false">
                    <i class="fas fa-filter me-1"></i> @L["Filters"]
                </button>
            </div>

            <!-- Collapsible Filters -->
            <div class="collapse d-md-block" id="courseFilters">
                <div class="row gx-2 gy-2">
                    
                    <!-- Category -->
                    <div class="col-12 col-sm-auto">
                        <select name="categoryId" class="form-select form-select-sm">
                            @foreach (var cat in Model.Categories)
                            {
                                var selected = Model.SelectedCategoryId == cat.Id ? "selected" : "";
                                <option value="@cat.Id" selected="@selected">
                                    @cat.Name
                                </option>
                            }
                            <option value="">@L["All"]</option>
                        </select>
                    </div>

                    <!-- Search -->
                    <div class="col-12 col-sm">
                        <input name="q"
                               class="form-control form-control-sm"
                               placeholder="@L["Search.Placeholder"]"
                               value="@q" />
                    </div>

                    <!-- Children Checkbox -->
                    <div class="col-auto">
                        <div class="form-check mt-1">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="forChildren"
                                   name="forChildren"
                                   value="true"
                                   @(Model.ForChildrenOnly == true ? "checked" : "")/>
                            <label class="form-check-label small" for="forChildren">
                                @L["Teacher.ForChildren"]
                            </label>
                        </div>
                    </div>

                    <!-- Search Button -->
                    <div class="col-12 col-sm-auto">
                        <button type="submit" class="btn btn-primary btn-sm w-100">
                            @L["button.Search"]
                        </button>
                    </div>

                </div>
            </div>

        </form>
    </div>
</div>


@if (!Model.Courses.Any())
{
    <div class="text-muted text-center py-4">@L["Admin.NoRecords"]</div>
}
else
{
    <div class="row g-3" dir="@dir" style="text-align:@textAlign">
        @foreach (var c in Model.Courses)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm course-card">

                    @if (!string.IsNullOrEmpty(c.CoverPublicUrl))
                    {
                        <div class="position-relative">
                            <img src="@c.CoverPublicUrl" class="card-img-top" alt="@c.Title" />

                            @if (c.IsForChildren)
                            {
                                <span class="badge bg-success position-absolute top-0 start-0 m-2 px-3 py-2 fs-6">
                                    🎈 @L["ForChildren"]
                                </span>
                            }
                        </div>
                    }

                    <div class="card-body d-flex flex-column">

                        <h5 class="card-title">@c.Title</h5>

                        <div class="meta mb-2">
                            <span class="me-2">@c.CategoryName</span>
                            <span class="text-muted">•</span>
                            <span class="ms-2">@c.TeacherName</span>
                        </div>

                        <p class="card-text desc mb-3">@c.Description</p>

                        <div class="mt-auto">
                            <div class="d-flex align-items-center justify-content-between gap-2">
                                <div class="fw-semibold">@c.PriceLabel</div>

                                @if (User.Identity?.IsAuthenticated ?? true)
                                {
                                    <a class="btn btn-outline-primary btn-sm"
                                       asp-action="Details"
                                       asp-route-id="@c.Id">
                                        @L["View"]
                                    </a>
                                }
                                else
                                {
                                    <!-- anonymous: go to Identity Register page and include returnUrl back to course details -->
                                    <a class="btn btn-primary btn-sm px-1 py-1 fw-semibold rounded-pill shadow-sm"
                                       href="/Identity/Account/Register">
                                        @L["Button.View"]
                                    </a>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new { q = Model.Query, categoryId = Model.SelectedCategoryId, forChildren = Model.ForChildrenOnly, page = Model.PageNumber - 1 })">
                    «
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { q = Model.Query, categoryId = Model.SelectedCategoryId, forChildren = Model.ForChildrenOnly, page = i })">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new { q = Model.Query, categoryId = Model.SelectedCategoryId, forChildren = Model.ForChildrenOnly, page = Model.PageNumber + 1 })">
                    »
                </a>
            </li>

        </ul>
    </nav>
}




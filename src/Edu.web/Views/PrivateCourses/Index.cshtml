@model Edu.Web.ViewModels.PrivateCourseIndexVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<Edu.Web.Resources.SharedResource> L
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx
@using System.Globalization

@{
    ViewData["Title"] = L["Nav.Courses"];
    var q = Model.Query ?? HttpCtx.HttpContext?.Request.Query["q"].ToString() ?? "";
    // Logical text alignment that works with bootstrap rtl file as well
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var dir = lang == "ar" ? "rtl" : "ltr";
    var textAlign = lang == "ar" ? "right" : "left";
}

<div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between mb-3 gap-2" dir="@dir" style="text-align:@textAlign">
    <div>
        <h2 class="mb-0">@L["Nav.Courses"]</h2>
        <div class="small text-muted">@L["Nav.RecordedCourses"]</div>
    </div>

    <form method="get" class="d-flex flex-wrap align-items-center gap-2 search-row">
        <select name="categoryId" class="form-select form-select-sm" style="min-width:140px;">
            <option value="">@L["All"]</option>
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat.Id" selected="@(Model.SelectedCategoryId == cat.Id)">@cat.Name</option>
            }
        </select>

        <input name="q" class="form-control form-control-sm flex-fill" placeholder="@L["Search.Placeholder"]" value="@q" />

        <button type="submit" class="btn btn-primary btn-sm">@L["button.Search"]</button>
    </form>
</div>

@if (!Model.Courses.Any())
{
    <div class="text-muted text-center py-4">@L["Admin.NoRecords"]</div>
}
else
{
    <div class="row g-3" dir="@dir" style="text-align:@textAlign">
        @foreach (var c in Model.Courses)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm course-card">
                    @if (!string.IsNullOrEmpty(c.CoverPublicUrl))
                    {
                        <img src="@c.CoverPublicUrl" class="card-img-top" alt="@c.Title" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@c.Title</h5>
                        <div class="meta mb-2">
                            <span class="me-2">@c.CategoryName</span>
                            <span class="text-muted">•</span>
                            <span class="ms-2">@c.TeacherName</span>
                        </div>

                        <p class="card-text desc mb-3">@c.Description</p>

                        <div class="mt-auto">
                            <div class="d-flex align-items-center justify-content-between gap-2">
                                <div class="fw-semibold">@c.PriceLabel</div>
                                <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@c.Id">@L["View"]</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}




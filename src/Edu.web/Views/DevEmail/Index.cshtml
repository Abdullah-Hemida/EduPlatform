@model IEnumerable<string>

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dev emails</title>
    <style>body{font-family:Segoe UI, Roboto, Arial;padding:18px} table{width:100%;border-collapse:collapse} td,th{padding:8px;border-bottom:1px solid #eee} a{color:inherit}</style>
</head>
<body>
    <h2>Dev emails</h2>
    <table>
        <thead><tr><th>File</th><th>Actions</th></tr></thead>
        <tbody>
            @foreach (var name in Model)
            {
                <tr>
                    <td>@name</td>
                    <td>
                        <a href="@Url.Action("ViewMail", "DevEmail", new { name = name })" target="_blank">View</a> |
                        <a href="@Url.Action("Raw", "DevEmail", new { name = name })" target="_blank">Raw</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>


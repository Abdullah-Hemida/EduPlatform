@model Edu.Web.Areas.Admin.ViewModels.AdminEnrollmentDetailsVm
@using System.Text.Json
@using Edu.Infrastructure.Helpers;
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["ReactiveCourse.PaymentDetails"] ?? "Enrollment Details & Payments";
    string defaultCover = Url.Content("~/images/default-course-cover.png");
}

<div class="d-flex align-items-start justify-content-between mb-3 mt-2 flex-wrap">
    <div class="me-2">
        <h3 class="mb-0">@ViewData["Title"]</h3>
        <div class="small text-muted">@(L["ReactiveCourse.PaymentDetailsSubtitle"] ?? "")</div>
    </div>

    <div class="ms-auto ms-md-0">
        <a asp-area="Teacher" asp-controller="ReactiveEnrollments" asp-action="Index" class="btn btn-outline-secondary btn-sm">
            @L["Common.Back"]
        </a>
    </div>
</div>

<div class="row g-3">
    <!-- Main column -->
    <div class="col-lg-8">
        <!-- Summary card -->
        <div class="card mb-3">
            <div class="card-body d-flex flex-column flex-md-row gap-3 align-items-start">
                <!-- info -->
                <div class="flex-grow-1 min-w-0 order-md-2">
                    <h5 class="mb-1 text-truncate-ellipsis">@Model.CourseTitle</h5>
                    <div class="small text-muted mb-2">@Model.StudentName <span class="text-muted">(@Model.StudentEmail)</span></div>

                    <div class="row g-2">
                        <div class="col-12 col-sm-6">
                            <div class="small text-muted">@L["ReactiveCourse.EnrolledAt"]</div>
                            <div class="small text-muted">@Model.CreatedAtUtc.ToLocalTime().ToString("f")</div>
                        </div>

                        <div class="col-12 col-sm-6">
                            <div class="small text-muted">@L["ReactiveCourse.TotalPaid"]</div>
                            <div class="fw-semibold">@Model.Months.Sum(m => m.Payments.Where(p => p.Status == Edu.Domain.Entities.EnrollmentMonthPaymentStatus.Paid).Sum(p => p.Amount)).ToEuro()</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payments -->
        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <div><strong>@L["ReactiveCourse.PaymentDetails"]</strong></div>
                <div class="small text-muted">@L["ReactiveCourse.Months"]</div>
            </div>

            <div class="card-body p-0">
                @if (Model.Months == null || !Model.Months.Any())
                {
                    <div class="p-3 text-muted small">@L["Admin.NoRecords"]</div>
                }
                else
                {
                    <!-- desktop/tablet: compact list -->
                    <div class="list-group list-group-flush d-none d-md-block">
                        @foreach (var m in Model.Months)
                        {
                            <div class="list-group-item d-flex align-items-center justify-content-between">
                                <div class="lg-item-main min-w-0">
                                    <div class="fw-semibold text-truncate">@L["ReactiveCourse.Month"] @m.MonthIndex</div>
                                    <div class="small text-muted">@m.LessonsCount @L["Admin.Lessons"]</div>
                                    <div class="small text-muted mt-1">@L["Admin.Payments"] : @m.Payments.Count()</div>
                                </div>

                                <div class="text-end ms-3">
                                    <div class="small text-muted">@L["Admin.Recent"]</div>
                                    <div class="mt-1">
                                        @if (!m.Payments.Any())
                                        {
                                            <small class="text-muted">-</small>
                                        }
                                        else
                                        {
                                            foreach (var p in m.Payments)
                                            {
                                                <div class="mb-2">
                                                    <div>
                                                        <span class="fw-semibold">@p.AmountLabel</span>
                                                        <div class="small text-muted">@p.CreatedAtUtc.ToLocalTime().ToString("g")</div>
                                                    </div>
                                                    <div class="mt-1">
                                                        @if (p.Status == Edu.Domain.Entities.EnrollmentMonthPaymentStatus.Paid)
                                                        {
                                                            <span class="badge bg-success">@(L["Status.Paid"] ?? "Paid")</span>
                                                        }
                                                        else if (p.Status == Edu.Domain.Entities.EnrollmentMonthPaymentStatus.Pending)
                                                        {
                                                            <span class="badge bg-warning text-dark">@(L["Status.Pending"] ?? "Pending")</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">@(L["Status.Rejected"] ?? "Rejected")</span>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- mobile: cards for easier reading/tapping -->
                    <div class="d-md-none p-2">
                        <div class="row row-cols-1 g-2">
                            @foreach (var m in Model.Months)
                            {
                                <div class="col">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start justify-content-between gap-2">
                                                <div class="min-w-0">
                                                    <div class="fw-semibold text-truncate">@L["ReactiveCourse.Month"] @m.MonthIndex</div>
                                                    <div class="small text-muted">@m.LessonsCount @L["Admin.Lessons"]</div>
                                                    <div class="small text-muted mt-1">@L["Admin.Payments"] : @m.Payments.Count()</div>
                                                </div>

                                                <div class="text-end">
                                                    @if (!m.Payments.Any())
                                                    {
                                                        <small class="text-muted">-</small>
                                                    }
                                                    else
                                                    {
                                                        foreach (var p in m.Payments)
                                                        {
                                                            <div class="mb-2">
                                                                <div class="small text-muted">@p.CreatedAtUtc.ToLocalTime().ToString("g")</div>
                                                                <div>
                                                                    <span class="fw-semibold">@p.AmountLabel</span>
                                                                </div>
                                                                <div class="mt-1">
                                                                    @if (p.Status == Edu.Domain.Entities.EnrollmentMonthPaymentStatus.Paid)
                                                                    {
                                                                        <span class="badge bg-success">@(L["Status.Paid"] ?? "Paid")</span>
                                                                    }
                                                                    else if (p.Status == Edu.Domain.Entities.EnrollmentMonthPaymentStatus.Pending)
                                                                    {
                                                                        <span class="badge bg-warning text-dark">@(L["Status.Pending"] ?? "Pending")</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="badge bg-danger">@(L["Status.Rejected"] ?? "Rejected")</span>
                                                                    }
                                                                </div>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <aside class="col-lg-4">
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h6>@L["Admin.StudentInfo"]</h6>
                <div class="d-flex align-items-start gap-3">
                    @if (!string.IsNullOrEmpty(Model.StudentPhotoUrl))
                    {
                        <img src="@Model.StudentPhotoUrl" class="rounded" style="width:72px;height:72px;object-fit:cover" />
                    }
                    <div class="min-w-0">
                        <div class="fw-semibold text-truncate">@Model.StudentName</div>
                        <div class="small text-muted">@Model.StudentEmail</div>

                        <div class="small text-muted d-flex align-items-center gap-2 mt-2">
                            <span dir="ltr" class="ltr-phone">@(Model.StudentPhone ?? "—")</span>
                            @if (!string.IsNullOrEmpty(Model.PhoneWhatsapp))
                            {
                                <span dir="ltr">@await Html.PartialAsync("~/Views/Shared/_WhatsAppChatButton.cshtml", Model.PhoneWhatsapp)</span>
                            }
                        </div>

                        <div class="mt-2 small text-muted">
                            <strong>@L["GuardianPhoneNumber"]:</strong>
                            <span dir="ltr" class="ltr-phone">@((Model.GuardianPhoneNumber) ?? "—")</span>
                            @if (!string.IsNullOrEmpty(Model.GuardianWhatsapp))
                            {
                                <span class="ms-2" dir="ltr">@await Html.PartialAsync("~/Views/Shared/_WhatsAppChatButton.cshtml", Model.GuardianWhatsapp)</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h6>@L["Course.Info"]</h6>
                <dl class="row small">
                    <dt class="col-6 text-muted">@L["Admin.Course"]</dt>
                    <dd class="col-6 text-end">@Model.CourseTitle</dd>

                    <dt class="col-6 text-muted">@L["ReactiveCourse.EnrolledAt"]</dt>
                    <dd class="col-6 text-end">@Model.CreatedAtUtc.ToLocalTime().ToString("g")</dd>
                </dl>
            </div>
        </div>
    </aside>
</div>






@model Edu.Web.Areas.Teacher.ViewModels.ReactiveEnrollmentDetailsVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["ReactiveCourse.PaymentDetails"] ?? "Enrollment Details & Payments";
    string defaultCover = Url.Content("~/images/default-course-cover.png");
}

<div class="d-flex align-items-start justify-content-between mb-3 mt-2 flex-wrap">
    <div class="me-2">
        <h3 class="mb-0">@ViewData["Title"]</h3>
        <div class="small text-muted">@(L["ReactiveCourse.PaymentDetailsSubtitle"] ?? "")</div>
    </div>

    <div class="ms-auto ms-md-0">
        <a asp-area="Teacher" asp-controller="ReactiveEnrollments" asp-action="Index" class="btn btn-outline-secondary btn-sm">
            @L["Common.Back"]
        </a>
    </div>
</div>

<div class="row g-3">
    <!-- Main column -->
    <div class="col-lg-8">
        <!-- Summary card -->
        <div class="card mb-3">
            <div class="card-body d-flex flex-column flex-md-row gap-3 align-items-start">
                <!-- cover -->
                @{
                    var imgSrc = !string.IsNullOrEmpty(Model.CourseCoverUrl) ? Model.CourseCoverUrl : defaultCover;
                }
                <div class="order-md-1">
                    <img loading="lazy"
                         src="@imgSrc"
                         alt="@Model.CourseTitle"
                         class="thumb-lg shadow-sm"
                         onerror="this.onerror=null;this.src='@defaultCover';" />
                </div>

                <!-- info -->
                <div class="flex-grow-1 min-w-0 order-md-2">
                    <h5 class="mb-1 text-truncate-ellipsis">@Model.CourseTitle</h5>
                    <div class="small text-muted mb-2">@Model.StudentName <span class="text-muted">(@Model.StudentEmail)</span></div>

                    <div class="row g-2">
                        <div class="col-12 col-sm-6">
                            <div class="small text-muted">@L["ReactiveCourse.EnrolledAt"]</div>
                            <div class="small text-muted">@Model.CreatedAtUtc.ToLocalTime().ToString("f")</div>
                        </div>

                        <div class="col-12 col-sm-6">
                            <div class="small text-muted">@L["ReactiveCourse.TotalPaid"]</div>
                            <div class="fw-semibold">@Model.TotalPaidLabel</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payments -->
        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <div><strong>@L["ReactiveCourse.PaymentDetails"]</strong></div>
                <div class="small text-muted">@L["ReactiveCourse.Months"]</div>
            </div>

            <div class="card-body p-0">
                @if (!Model.MonthPayments.Any())
                {
                    <div class="p-3 text-muted small">@L["Admin.NoRecords"]</div>
                }
                else
                {
                    <!-- desktop/tablet: compact list -->
                    <div class="list-group list-group-flush d-none d-md-block">
                        @foreach (var mp in Model.MonthPayments)
                        {
                            <div class="list-group-item d-flex align-items-center justify-content-between">
                                <div class="lg-item-main min-w-0">
                                    <div class="fw-semibold text-truncate">@L["ReactiveCourse.Month"] @mp.MonthIndex</div>
                                    <div class="small text-muted">@mp.AmountLabel</div>
                                    @if (!string.IsNullOrEmpty(mp.PaymentReference))
                                    {
                                        <div class="small text-muted">Ref: @mp.PaymentReference</div>
                                    }
                                    @if (!string.IsNullOrEmpty(mp.AdminNote))
                                    {
                                        <div class="small text-muted mt-1">Note: @mp.AdminNote</div>
                                    }
                                </div>

                                <div class="text-end ms-3">
                                    <div class="small text-muted">@mp.CreatedAtUtc.ToLocalTime().ToString("g")</div>
                                    <div class="mt-1">
                                        @if (mp.Status == EnrollmentMonthPaymentStatus.Paid)
                                        {
                                            <span class="badge bg-success">@(L["Status.Paid"] ?? "Paid")</span>
                                        }
                                        else if (mp.Status == EnrollmentMonthPaymentStatus.Pending)
                                        {
                                            <span class="badge bg-warning text-dark">@(L["ReactiveCourse.PendingPayments"] ?? "Pending")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@(L["Status.Rejected"] ?? "Rejected")</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- mobile: cards for easier reading/tapping -->
                    <div class="d-md-none p-2">
                        <div class="row row-cols-1 g-2">
                            @foreach (var mp in Model.MonthPayments)
                            {
                                <div class="col">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start justify-content-between gap-2">
                                                <div class="min-w-0">
                                                    <div class="fw-semibold text-truncate">@L["ReactiveCourse.Month"] @mp.MonthIndex</div>
                                                    <div class="small text-muted">@mp.AmountLabel</div>
                                                    @if (!string.IsNullOrEmpty(mp.PaymentReference))
                                                    {
                                                        <div class="small text-muted">Ref: @mp.PaymentReference</div>
                                                    }
                                                    @if (!string.IsNullOrEmpty(mp.AdminNote))
                                                    {
                                                        <div class="small text-muted mt-1">Note: @mp.AdminNote</div>
                                                    }
                                                </div>

                                                <div class="text-end">
                                                    <div class="small text-muted">@mp.CreatedAtUtc.ToLocalTime().ToString("g")</div>
                                                    <div class="mt-1">
                                                        @if (mp.Status == EnrollmentMonthPaymentStatus.Paid)
                                                        {
                                                            <span class="badge bg-success">@(L["Status.Paid"] ?? "Paid")</span>
                                                        }
                                                        else if (mp.Status == EnrollmentMonthPaymentStatus.Pending)
                                                        {
                                                            <span class="badge bg-warning text-dark">@(L["ReactiveCourse.PendingPayments"] ?? "Pending")</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">@(L["Status.Rejected"] ?? "Rejected")</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>





@model Edu.Web.Areas.Teacher.ViewModels.PurchaseRequestListVm
@using Edu.Domain.Entities
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Admin.PurchaseRequests"] ?? "Purchase Requests";
    string crop(string? s, int len = 60) => string.IsNullOrEmpty(s) ? "" : (s.Length <= len ? s : s.Substring(0, len) + "…");
    Func<int, object> pageRoute = p => new { q = Model.Query, FilterStatus = Model.FilterStatus?.ToString(), page = p, pageSize = Model.PageSize };
}

<div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between mb-3 gap-2">
    <div>
        <h3 class="mb-0">@ViewData["Title"]</h3>
        <div class="small text-muted">@(L["Admin.PurchaseRequestsSubtitle"] ?? "Purchase requests for your private courses (view only)")</div>
    </div>

    <div class="w-100 w-md-auto">
        <form method="get" class="row gx-2 gy-2 align-items-center">
            <div class="col-12 col-md-5">
                <div class="input-group input-group-sm">
                    <input name="q"
                           value="@Model.Query"
                           class="form-control"
                           aria-label="@L["DataTable.Search"].Value" />
                    <button type="submit" class="btn btn-outline-secondary d-md-none" aria-label="Search">
                        <i class="fas fa-search" aria-hidden="true"></i>
                    </button>
                </div>
            </div>

            <div class="col-6 col-md-3">
                <label class="visually-hidden" for="filterStatus">@L["Admin.Status"]</label>
                <select id="filterStatus" asp-for="FilterStatus" class="form-select form-select-sm" asp-items="@((SelectList?)ViewData["StatusOptions"])" aria-label="@L["Admin.Status"]"></select>
            </div>

            <div class="col-4 col-md-2">
                <label class="visually-hidden" for="pageSizeSelect">@L["DataTable.ShowEntries"]</label>
                <select id="pageSizeSelect" name="pageSize" class="form-select form-select-sm" onchange="this.form.submit()" aria-label="@L["DataTable.ShowEntries"]">
                    @{
                        var sizes = new[] { 5, 10, 20, 50 };
                        foreach (var s in sizes)
                        {
                            <option value="@s" selected="@(s == Model.PageSize ? "selected" : null)">@s</option>;
                        }
                    }
                </select>
            </div>

            <div class="col-6 col-md-2 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary btn-sm">@L["Button.Search"]</button>
                <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Index")">@L["Admin.Reset"]</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-2">
        @if (!Model.Requests.Any())
        {
            <div class="text-muted small p-3">@L["Admin.NoRecords"]</div>
        }
        else
        {
            <!-- CARDS for small screens (show for < md) -->
            <div class="d-block d-md-none">
                <div class="row g-2">
                    @foreach (var r in Model.Requests)
                    {
                        <div class="col-12">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body p-2 d-flex flex-column flex-sm-row gap-2">
                                    <!-- Main content -->
                                    <div class="flex-grow-1 card-meta min-w-0">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="me-2 min-w-0">
                                                <div class="fw-semibold text-truncate">@r.CourseTitle</div>
                                                <div class="small text-muted text-truncate break-anywhere">@r.StudentName </div>
                                                <div class="small text-muted">@r.StudentEmail</div>
                                            </div>

                                            <div class="text-end ms-2">
                                                <div class="small text-muted">@r.AmountLabel</div>
                                                <div class="small text-muted">@r.RequestDateUtc.ToLocalTime().ToString("g")</div>
                                            </div>
                                        </div>

                                        <div class="mt-2 d-flex flex-column flex-sm-row justify-content-between align-items-start gap-2">
                                            <div>
                                                @{
                                                    var badgeClass = r.Status switch
                                                    {
                                                        PurchaseStatus.Pending => "bg-warning text-dark",
                                                        PurchaseStatus.Completed => "bg-success",
                                                        PurchaseStatus.Rejected => "bg-danger",
                                                        PurchaseStatus.Cancelled => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };

                                                    var localized = r.Status switch
                                                    {
                                                        PurchaseStatus.Pending => L["Status.Pending"],
                                                        PurchaseStatus.Completed => L["Status.Completed"],
                                                        PurchaseStatus.Rejected => L["Status.Rejected"],
                                                        PurchaseStatus.Cancelled => L["Status.Cancelled"],
                                                        _ => L["Status.Unknown", r.Status.ToString()]
                                                    };
                                                }
                                                <span class="badge @badgeClass" aria-label="@localized">@localized</span>
                                            </div>

                                            <div class="d-flex gap-2 mt-2 mt-sm-0">
                                                <a asp-area="Teacher" asp-controller="PurchaseRequests" asp-action="Details" asp-route-id="@r.Id" class="btn btn-sm btn-outline-secondary">@L["Button.View"]</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- TABLE for md+ -->
            <div class="table-responsive d-none d-md-block">
                <table class="table table-hover table-sm align-middle mb-0">
                    <thead>
                        <tr>
                            <th style="width:48px">#</th>
                            <th>@L["Teacher.RecordedCourses"]</th>
                            <th>@L["Admin.Student"]</th>
                            <th class="text-end">@L["Purchase.Amount"]</th>
                            <th>@L["Admin.Status"]</th>
                            <th>@L["Booking.RequestDate"]</th>
                            <th class="text-end">@L["Admin.Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Requests)
                        {
                            <tr>
                                <td class="align-middle">@r.Id</td>
                                <td class="align-middle">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="ms-1" style="min-width:0;">
                                            <div class="fw-semibold text-truncate" style="max-width:320px;">@r.CourseTitle</div>
                                            <div class="small text-muted text-truncate">@crop(r.CourseTitle, 60)</div>
                                            @if (!string.IsNullOrEmpty(r.CategoryName))
                                            {
                                                <div class="small text-muted">@r.CategoryName</div>
                                            }
                                        </div>
                                    </div>
                                </td>

                                <td class="align-middle">
                                    <div class="fw-semibold">@r.StudentName</div>
                                    <div class="small text-muted">@r.StudentEmail</div>
                                </td>

                                <td class="align-middle text-end fw-semibold">@r.AmountLabel</td>

                                <td class="align-middle">
                                    @{
                                        var badgeClass = r.Status switch
                                        {
                                            PurchaseStatus.Pending => "bg-warning text-dark",
                                            PurchaseStatus.Completed => "bg-success",
                                            PurchaseStatus.Rejected => "bg-danger",
                                            PurchaseStatus.Cancelled => "bg-secondary",
                                            _ => "bg-secondary"
                                        };

                                        var localized = r.Status switch
                                        {
                                            PurchaseStatus.Pending => L["Status.Pending"],
                                            PurchaseStatus.Completed => L["Status.Completed"],
                                            PurchaseStatus.Rejected => L["Status.Rejected"],
                                            PurchaseStatus.Cancelled => L["Status.Cancelled"],
                                            _ => L["Status.Unknown", r.Status.ToString()]
                                        };
                                    }
                                    <span class="badge @badgeClass" aria-label="@localized">@localized</span>
                                </td>

                                <td class="align-middle small text-muted">@r.RequestDateUtc.ToLocalTime().ToString("g")</td>

                                <td class="align-middle text-end">
                                    <a asp-area="Teacher" asp-controller="PurchaseRequests" asp-action="Details" asp-route-id="@r.Id" class="btn btn-sm btn-outline-secondary">@L["Button.View"]</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <!-- footer -->
    <div class="card-footer d-flex flex-column flex-sm-row align-items-center justify-content-between gap-2">
        <div class="small text-muted">
            @{
                var start = ((Model.Page - 1) * Model.PageSize) + 1;
                var end = Math.Min(Model.TotalCount, Model.Page * Model.PageSize);
            }
            @(L["School.Showing"] ?? "Showing") @($"{start}–{end}") @(L["School.Of"] ?? "of") <strong>@Model.TotalCount</strong>
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", pageRoute(Model.Page - 1))" aria-label="Previous">&laquo;</a>
                </li>

                @{
                    int visible = 5;
                    int startPage = Math.Max(1, Model.Page - visible / 2);
                    int endPage = Math.Min(Model.TotalPages, startPage + visible - 1);
                    if (endPage - startPage < visible - 1) startPage = Math.Max(1, endPage - visible + 1);
                }
                @for (int p = startPage; p <= endPage; p++)
                {
                    <li class="page-item @(p == Model.Page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", pageRoute(p))">@p</a>
                    </li>
                }

                <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Index", pageRoute(Model.Page + 1))" aria-label="Next">&raquo;</a>
                </li>
            </ul>
        </nav>
    </div>
</div>









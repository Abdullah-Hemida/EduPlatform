@model Edu.Web.Areas.Teacher.ViewModels.PurchaseRequestDetailsVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Admin.PurchaseRequestDetails"] ?? "Purchase Request Details";
    string fallbackCover = Url.Content("~/images/default-course-cover.png");
}

<div class="d-flex flex-wrap align-items-center justify-content-between mb-3 mt-2">
    <h3 class="mb-0">@ViewData["Title"]</h3>

    <a asp-area="Teacher" asp-controller="PurchaseRequests" asp-action="Index" class="btn btn-outline-secondary btn-sm ms-2">
        @L["Common.Back"]
    </a>
</div>

<div class="row g-3">
    <!-- Main column -->
    <div class="col-lg-8">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="mb-1 text-truncate min-w-0">@Model.CourseTitle</h5>
                <div class="small text-muted mb-3">@Model.CategoryName</div>

                <div class="row g-2">
                    <div class="col-12 col-sm-4 text-muted">@L["Admin.Student"]</div>
                    <div class="col-12 col-sm-8 min-w-0">
                        <div class="fw-semibold text-truncate">@Model.StudentName</div>
                        <div class="small text-muted">@Model.StudentEmail</div>
                    </div>

                    <div class="col-12 col-sm-4 text-muted">@L["Admin.Amount"]</div>
                    <div class="col-12 col-sm-8 fw-semibold">@Model.AmountLabel</div>

                    <div class="col-12 col-sm-4 text-muted">@L["Admin.Status"]</div>
                    <div class="col-12 col-sm-8">
                        @if (Model.Status == PurchaseStatus.Pending)
                        {
                            <span class="badge bg-warning text-dark">@L["Status.Pending"]</span>
                        }
                        else if (Model.Status == PurchaseStatus.Completed)
                        {
                            <span class="badge bg-success">@L["Status.Completed"]</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">@L["Status.Rejected"]</span>
                        }
                    </div>

                    <div class="col-12 col-sm-4 text-muted">@L["Admin.RequestedAt"]</div>
                    <div class="col-12 col-sm-8 small text-muted">@Model.RequestDateUtc.ToLocalTime().ToString("f")</div>

                    <div class="col-12 col-sm-4 text-muted">@L["Admin.Note"]</div>
                    <div class="col-12 col-sm-8 min-w-0">@(!string.IsNullOrEmpty(Model.AdminNote) ? Model.AdminNote : L["Admin.NoNotes"])</div>
                </div>
            </div>
        </div>

        <!-- Course card: use order-md to allow flipping in RTL via CSS above -->
        <div class="card">
            <div class="card-header"><strong>@L["Admin.Course"]</strong></div>

            <div class="card-body d-flex flex-column flex-md-row align-items-start gap-3">
                <div class="flex-shrink-0 order-md-1">
                    <img loading="lazy"
                         src="@(string.IsNullOrWhiteSpace(Model.CourseCoverUrl) ? fallbackCover : Model.CourseCoverUrl)"
                         alt="@Model.CourseTitle"
                         class="thumb-lg" />
                </div>

                <div class="min-w-0 flex-grow-1 order-md-2">
                    <div class="fw-semibold text-truncate">@Model.CourseTitle</div>
                    <div class="small text-muted">@Model.CategoryName</div>

                    <div class="mt-3 d-flex flex-wrap gap-2">
                        <a asp-area="Teacher" asp-controller="PrivateCourses" asp-action="Details" asp-route-id="@Model.PrivateCourseId" class="btn btn-sm btn-outline-secondary">
                            @L["Button.View"]
                        </a>
                        @* extra contextual buttons can be added here (they will wrap on small screens) *@
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Aside column -->
    <aside class="col-lg-4">
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h6 class="mb-1">@L["Admin.Student"]</h6>
                <div class="small text-muted">@Model.StudentName</div>
                <div class="small text-muted">@Model.StudentEmail</div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h6 class="mb-1">@L["Admin.Payments"]</h6>
                <div class="small text-muted">@L["Admin.Amount"]</div>
                <div class="fw-semibold">@Model.AmountLabel</div>
            </div>
        </div>
    </aside>
</div>







@model Edu.Web.Areas.Teacher.ViewModels.SlotCreateEditVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Slots.Edit"];
}

<div class="card">
    <div class="card-body">
        <h4 class="mb-3">@L["Slots.Edit"]</h4>

        <form method="post" asp-action="Edit" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="RowVersion" value="@(Model.RowVersion != null ? Convert.ToBase64String(Model.RowVersion) : "")" />

            <div class="row g-2">
                <div class="col-12 col-md-6">
                    <label asp-for="StartLocal" class="form-label">@L["Slots.Start"]</label>
                    <input asp-for="StartLocal" class="form-control" type="datetime-local" />
                    <span asp-validation-for="StartLocal" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="EndLocal" class="form-label">@L["Slots.End"]</label>
                    <input asp-for="EndLocal" class="form-control" type="datetime-local" />
                    <span asp-validation-for="EndLocal" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Capacity" class="form-label">@L["Slots.Capacity"]</label>
                    <input asp-for="Capacity" class="form-control" type="number" min="1" />
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Price" class="form-label">@L["Slots.Price"]</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.1" />
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="LocationUrl" class="form-label">@L["Slots.LocationUrl"]</label>
                    <input asp-for="LocationUrl" class="form-control" />
                </div>

                <div class="col-12 d-flex gap-2 mt-2">
                    <button class="btn btn-primary">@L["Button.Save"]</button>
                    <a asp-action="Index" class="btn btn-light">@L["Button.Cancel"]</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



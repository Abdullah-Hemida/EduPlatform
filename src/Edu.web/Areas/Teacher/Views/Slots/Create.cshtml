@model Edu.Web.Areas.Teacher.ViewModels.SlotCreateEditVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L
@using System.Globalization

@{
    ViewData["Title"] = L["Slots.Create"];
    var isRtl = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar";
    var shortDtFmt = CultureInfo.CurrentUICulture.DateTimeFormat.ShortDatePattern + " " + CultureInfo.CurrentUICulture.DateTimeFormat.ShortTimePattern;
}

<div class="card">
    <div class="card-body">
        <h4 class="mb-3">@L["Slots.Create"]</h4>

        <form method="post" asp-action="Create" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            <div class="row g-2">
                <!-- Start -->
                <div class="col-12 col-md-6">
                    <label asp-for="StartLocal" class="form-label @(isRtl ? "text-md-end" : "")">
                        @L["Slots.Start"]
                    </label>
                    <input asp-for="StartLocal" id="StartLocal" class="form-control input-fix" type="datetime-local" />
                    <div class="form-text small">@shortDtFmt</div>
                    <span asp-validation-for="StartLocal" class="text-danger small"></span>
                </div>

                <!-- End -->
                <div class="col-12 col-md-6">
                    <label asp-for="EndLocal" class="form-label @(isRtl ? "text-md-end" : "")">
                        @L["Slots.End"]
                    </label>
                    <input asp-for="EndLocal" id="EndLocal" class="form-control input-fix" type="datetime-local" />
                    <div class="form-text small">@shortDtFmt</div>
                    <span asp-validation-for="EndLocal" class="text-danger small"></span>
                </div>
                <div class="row">
                    <!-- Duration -->
                    <div class="col-12 col-md-4">
                        <label class="form-label @(isRtl ? "text-md-end" : "")">@L["Slots.Duration (Minutes)"]</label>
                        <input id="DurationMinutes" class="form-control input-fix" type="number" value="60" min="15" step="15" />
                    </div>

                    <!-- Capacity -->
                    <div class="col-12 col-md-4">
                        <label asp-for="Capacity" class="form-label @(isRtl ? "text-md-end" : "")">@L["Slots.Capacity"]</label>
                        <input asp-for="Capacity" class="form-control input-fix" type="number" min="1" />
                    </div>

                    <!-- Price -->
                    <div class="col-12 col-md-4">
                        <label asp-for="Price" class="form-label @(isRtl ? "text-md-end" : "")">@L["Slots.Price"]</label>
                        <input asp-for="Price" class="form-control input-fix" type="number" step="0.1" />
                    </div>
                </div>

                <!-- Location URL -->
                <div class="col-12">
                    <label asp-for="LocationUrl" class="form-label @(isRtl ? "text-md-end" : "")">@L["Slots.LocationUrl"]</label>
                    <input asp-for="LocationUrl" class="form-control break-any" />
                </div>

                <!-- Actions -->
                <div class="col-12 d-flex flex-column flex-sm-row gap-2 mt-2">
                    <button class="btn btn-primary w-100 w-sm-auto">@L["Button.Save"]</button>
                    <a asp-action="Index" class="btn btn-light w-100 w-sm-auto">@L["Button.Cancel"]</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var startInput = document.getElementById('StartLocal');
            var endInput = document.getElementById('EndLocal');
            var durationInput = document.getElementById('DurationMinutes');

            if (!startInput || !endInput || !durationInput) return;

            function toLocalIso(dt) {
                // dt is a Date => returns "YYYY-MM-DDTHH:MM"
                var year = dt.getFullYear();
                var month = String(dt.getMonth() + 1).padStart(2, '0');
                var day = String(dt.getDate()).padStart(2, '0');
                var hours = String(dt.getHours()).padStart(2, '0');
                var minutes = String(dt.getMinutes()).padStart(2, '0');
                return year + '-' + month + '-' + day + 'T' + hours + ':' + minutes;
            }

            function parseInputAsDate(value) {
                // Some browsers may produce value like "2025-11-27T14:30"
                if (!value) return null;
                var d = new Date(value);
                return isNaN(d.getTime()) ? null : d;
            }

            function updateEndTime() {
                var startVal = startInput.value;
                var dur = parseInt(durationInput.value, 10);
                if (!startVal || !dur || dur <= 0) return;

                var startDate = parseInputAsDate(startVal);
                if (!startDate) return;

                var endDate = new Date(startDate.getTime() + dur * 60000);
                endInput.value = toLocalIso(endDate);
            }

            // initialize end if start is present
            updateEndTime();

            startInput.addEventListener('change', updateEndTime);
            durationInput.addEventListener('input', updateEndTime);
        });
    </script>
}







@model Edu.Web.Areas.Student.ViewModels.ViewMonthVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["ReactiveCourse.MonthLessons"] ?? "Month Lessons";
}

<div class="card">
    <div class="card-body">
        <h4>@Model.CourseTitle - @L["Month"] @Model.MonthIndex</h4>

        @if (!Model.Lessons.Any())
        {
            <div class="alert alert-info">@L["Admin.NoLessonsYet"]</div>
        }
        else
        {
            <ul class="list-group list-group-flush mt-3">
                @foreach (var lesson in Model.Lessons)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@lesson.Title</strong>
                            <div class="small text-muted">@if(lesson.ScheduledUtc.HasValue) {
                            @lesson.ScheduledUtc.Value.ToLocalTime().ToString("g")
                        }
    </div>
                        <div class="small">@lesson.Notes</div>
                    </div>
                    <div class="text-end">
                        @if (!string.IsNullOrEmpty(lesson.MeetUrl))
                        {
                            <a href="@lesson.MeetUrl" target="_blank" class="btn btn-primary btn-sm">@L["Booking.OpenMeet"]</a>
                        }
                        else
                        {
                            <span class="text-muted">@L["Booking.NoMeetUrl"]</span>
                        }
                    </div>
                </li>
            }
        </ul>
                }
    </div>
</div>


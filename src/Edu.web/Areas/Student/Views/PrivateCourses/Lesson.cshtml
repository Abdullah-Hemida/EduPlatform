@model Edu.Web.Areas.Student.ViewModels.PrivateLessonVm
@using Edu.Web.Resources
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = Model.Title;
}

<div class="card mb-3">
    <div class="card-body">
        <h4>@Model.Title</h4>

        @if (!string.IsNullOrEmpty(Model.YouTubeVideoId))
        {
            <div class="ratio ratio-16x9 mb-3">
                <iframe src="https://www.youtube.com/embed/@Model.YouTubeVideoId" title="@Model.Title" allowfullscreen frameborder="0"></iframe>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.VideoUrl))
        {
            <video controls class="w-100 mb-3">
                <source src="@Model.VideoUrl" />
                @L["Admin.NoVideo"]
            </video>
        }

        @if (Model.Files != null && Model.Files.Any())
        {
            <h6>@L["Admin.Files"]</h6>
            <ul class="list-group">
                @foreach (var f in Model.Files)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>@f.Name</div>
                        <div>
                            @if (!string.IsNullOrEmpty(f.PublicUrl))
                            {
                                <a class="btn btn-sm btn-outline-primary" href="@f.PublicUrl" target="_blank">@(L["Download"] ?? "Download")</a>
                            }
                            else
                            {
                                <span class="text-muted">@(L["Admin.NoFile"] ?? "Not available")</span>
                            }
                        </div>
                    </li>
                }
            </ul>
        }
    </div>
</div>

<a asp-action="Details" asp-route-id="@Model.PrivateCourseId" class="btn btn-light">
    <i class="fas fa-arrow-left me-1 d-none d-rtl-none"></i>
    <i class="fas fa-arrow-right ms-1 d-none d-ltr-none"></i>
    @L["Common.Back"]
</a>



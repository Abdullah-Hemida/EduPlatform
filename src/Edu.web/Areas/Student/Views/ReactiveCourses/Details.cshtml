@model Edu.Web.Areas.Student.ViewModels.StudentReactiveCourseDetailsVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            @if (!string.IsNullOrEmpty(Model.CoverPublicUrl))
            {
                <img src="@Model.CoverPublicUrl" class="card-img-top" style="height:240px;object-fit:cover" />
            }
            <div class="card-body">
                <h3>@Model.Title</h3>
                <p>@Model.Description</p>
                <p><strong>@L["ReactiveCourse.PricePerMonth"]:</strong> @Model.PricePerMonthLabel</p>
            </div>
        </div>

        <div>
            <h5>@L["ReactiveCourse.Months"]</h5>

            @foreach (var month in Model.Months)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>@L["ReactiveCourse.Month"] @month.MonthIndex</strong>
                                <div class="small text-muted">@month.LessonsCount @L["Admin.Lessons"]</div>
                            </div>
                            <div class="text-end">
                                @if (!month.IsReadyForPayment)
                                {
                                    <span class="badge bg-secondary">@(L["ReactiveCourse.NotReady"] ?? "Not ready")</span>
                                }
                                else if (month.MyPaymentStatus == EnrollmentMonthPaymentStatus.Paid)
                                {
                                    <span class="badge bg-success">@L["Status.Completed"]</span>
                                    <a asp-area="Student" asp-controller="ReactiveEnrollments" asp-action="ViewMonth" asp-route-monthId="@month.Id" class="btn btn-outline-primary btn-sm ms-2">@L["Button.View"]</a>
                                }
                                else if (month.MyPaymentStatus == EnrollmentMonthPaymentStatus.Pending)
                                {
                                    <span class="badge bg-warning">@L["Status.Pending"]</span>
                                }
                                else
                                {
                                    <form asp-area="Student" asp-controller="ReactiveEnrollments" asp-action="RequestMonthPayment" method="post" class="d-inline">
                                        <input type="hidden" name="courseId" value="@Model.Id" />
                                        <input type="hidden" name="monthId" value="@month.Id" />
                                        <button class="btn btn-primary btn-sm">@(L["Button.Submit"] ?? "Request to Pay")</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>

    <div class="col-md-4">
        <div class="card sticky-top">
            <div class="card-body">
                <a asp-area="Student" asp-controller="ReactiveEnrollments" asp-action="MyEnrollments" class="btn btn-outline-primary w-100 mb-2">@(L["ReactiveCourse.MyEnrollments"] ?? "My Enrollments")</a>
                <a asp-action="Index" asp-controller="ReactiveCourses" class="btn btn-light w-100">
                    <i class="fas fa-arrow-left me-1 d-none d-rtl-none"></i>
                    <i class="fas fa-arrow-right ms-1 d-none d-ltr-none"></i>
                    @L["Common.Back"]
                </a>
            </div>
        </div>
    </div>
</div>



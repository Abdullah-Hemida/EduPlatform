@page
@model Edu.Web.Areas.Identity.Pages.Account.Manage.IndexModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Edu.Web.Areas.Identity.Pages.Account.Manage.IndexModel> L

@{
    ViewData["Title"] = L["Manage.Profile"];
    Layout = "~/Views/Shared/_MentorLayout.cshtml";

    bool HasModelErrors()
    {
        var ms = ViewData?.ModelState;
        if (ms == null) return false;
        return !ms.IsValid;
    }
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar Navigation -->
        <div class="col-lg-3 col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="position-relative d-inline-block">
                        <img src="@(!string.IsNullOrEmpty(Model.Input.PhotoUrl) ? Model.Input.PhotoUrl : "/images/default-avatar.png")"
                             class="rounded-circle mb-3"
                             style="width:120px;height:120px;object-fit:cover"
                             alt="@L["Profile.PhotoAlt"]" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-image me-2 text-muted"></i>@L["Profile.UploadPhotoLabel"]
                        </label>
                        <input type="file" name="photo" class="form-control form-control-lg" accept="image/*" />
                        @if (!string.IsNullOrEmpty(Model.Input.PhotoUrl))
                        {
                            <div class="mt-2">
                                <small class="text-muted">@L["Profile.CurrentPhoto"]</small>
                                <img src="@Model.Input.PhotoUrl" class="rounded mt-2 d-block"
                                     style="width:80px;height:80px;object-fit:cover" />
                            </div>
                        }
                    </div>

                    @{
                        var displayNameFirst = "User";
                        if (!string.IsNullOrEmpty(Model.Input.FullName))
                        {
                            var parts = Model.Input.FullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
                            displayNameFirst = parts.Length > 0 ? parts[0] : Model.Input.FullName;
                        }
                    }
                    <h5 class="card-title mb-1">@displayNameFirst</h5>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="#profile" class="list-group-item list-group-item-action active" data-bs-toggle="tab">
                            <i class="fas fa-user-circle me-3 text-primary"></i>
                            <span>@L["Manage.Profile"]</span>
                        </a>
                        @if (User.IsInRole("Teacher"))
                        {
                            <a href="#teacher" class="list-group-item list-group-item-action" data-bs-toggle="tab">
                                <i class="fas fa-chalkboard-teacher me-3 text-success"></i>
                                <span>@L["Manage.TeacherProfile"]</span>
                            </a>
                        }
                        <a href="#security" class="list-group-item list-group-item-action" data-bs-toggle="tab">
                            <i class="fas fa-shield-alt me-3 text-warning"></i>
                            <span>@L["Manage.Security"]</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Area -->
        <div class="col-lg-9 col-md-8">
            <div class="tab-content">
                <!-- Profile Tab -->
                <div class="tab-pane fade show active" id="profile">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-user-edit me-2 text-primary"></i>
                                @L["Manage.EditProfile"]
                            </h5>
                        </div>
                        <div class="card-body">
                            <form method="post" enctype="multipart/form-data" asp-page-handler="Profile">
                                @Html.AntiForgeryToken()

                                @* only show validation summary if errors exist *@
                                @if (HasModelErrors())
                                {
                                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                                }

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.FullName" class="form-label fw-semibold">
                                                <i class="fas fa-signature me-2 text-muted"></i>@L["Profile.DisplayNameLabel"]
                                            </label>
                                            <input asp-for="Input.FullName" class="form-control form-control-lg" />
                                            <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.PhoneNumber" class="form-label fw-semibold">
                                                <i class="fas fa-phone me-2 text-muted"></i>@L["Profile.PhoneLabel"]
                                            </label>
                                            <input asp-for="Input.PhoneNumber" class="form-control form-control-lg" />
                                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="Input.DateOfBirth" class="form-label fw-semibold">
                                                <i class="fas fa-birthday-cake me-2 text-muted"></i>@L["Profile.DateOfBirth"]
                                            </label>
                                            <input asp-for="Input.DateOfBirth" class="form-control form-control-lg" type="date" />
                                            <span asp-validation-for="Input.DateOfBirth" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">
                                                <i class="fas fa-image me-2 text-muted"></i>@L["Profile.UploadPhotoLabel"]
                                            </label>
                                            <input type="file" name="photo" class="form-control form-control-lg"
                                                   accept="image/*" />
                                            @if (!string.IsNullOrEmpty(Model.Input.PhotoUrl))
                                            {
                                                <div class="mt-2">
                                                    <small class="text-muted">@L["Profile.CurrentPhoto"]</small>
                                                    <img src="@Model.Input.PhotoUrl" class="rounded mt-2 d-block"
                                                         style="width:80px;height:80px;object-fit:cover" />
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary btn-lg px-4">
                                        <i class="fas fa-save me-2"></i>@L["Profile.SaveProfile"]
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Teacher Tab -->
                @if (User.IsInRole("Teacher"))
                {
                    <div class="tab-pane fade" id="teacher">
                        <div class="card shadow-sm">
                            <div class="card-header bg-transparent">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-user-tie me-2 text-success"></i>
                                    @L["Manage.TeacherSectionTitle"]
                                </h5>
                            </div>
                            <div class="card-body">
                                <form method="post" enctype="multipart/form-data" asp-page-handler="Teacher">
                                    @Html.AntiForgeryToken()

                                    @if (HasModelErrors())
                                    {
                                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                                    }

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="Input.JobTitle" class="form-label fw-semibold">
                                                    <i class="fas fa-briefcase me-2 text-muted"></i>@L["Profile.JobTitleLabel"]
                                                </label>
                                                <input asp-for="Input.JobTitle" class="form-control form-control-lg" />
                                                <span asp-validation-for="Input.JobTitle" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="form-label fw-semibold">
                                                    <i class="fas fa-file-pdf me-2 text-muted"></i>@L["Profile.UploadCVLabel"]
                                                </label>
                                                <input type="file" name="cvFile" class="form-control form-control-lg"
                                                       accept=".pdf,.doc,.docx" />
                                                @if (!string.IsNullOrEmpty(Model.Input.CVUrl))
                                                {
                                                    <div class="mt-2">
                                                        <small class="text-muted">@L["Profile.CurrentCV"]</small>
                                                        <div>
                                                            <a href="@Model.Input.CVUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-download me-1"></i>@L["Profile.DownloadCV"]
                                                            </a>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Input.ShortBio" class="form-label fw-semibold">
                                            <i class="fas fa-file-alt me-2 text-muted"></i>@L["Profile.ShortBioLabel"]
                                        </label>
                                        <textarea asp-for="Input.ShortBio" class="form-control form-control-lg" rows="4"
                                                  placeholder="@L["Profile.ShortBioPlaceholder"]"></textarea>
                                        <span asp-validation-for="Input.ShortBio" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-4">
                                        <label asp-for="Input.IntroVideoUrl" class="form-label fw-semibold">
                                            <i class="fas fa-video me-2 text-muted"></i>@L["Profile.IntroVideoLabel"]
                                        </label>
                                        <input asp-for="Input.IntroVideoUrl" class="form-control form-control-lg"
                                               placeholder="@L["Profile.IntroVideoPlaceholder"]" />
                                        <div class="form-text">@L["Profile.IntroVideoPlaceholder"]</div>
                                        <span asp-validation-for="Input.IntroVideoUrl" class="text-danger small"></span>

                                        @if (ViewData["IntroVideoEmbedUrl"] != null)
                                        {
                                            <div class="mt-3">
                                                <label class="form-label fw-semibold">@L["Profile.CurrentIntroVideo"]</label>
                                                <div class="ratio ratio-16x9 border rounded">
                                                    <iframe src="@ViewData["IntroVideoEmbedUrl"]"
                                                            frameborder="0"
                                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                                            allowfullscreen
                                                            class="rounded">
                                                    </iframe>
                                                </div>
                                            </div>
                                        }
                                    </div>

                                    <div class="d-flex justify-content-end">
                                        <button type="submit" class="btn btn-success btn-lg px-4">
                                            <i class="fas fa-save me-2"></i>@L["Profile.SaveTeacher"]
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }

                <!-- Security Tab -->
                <div class="tab-pane fade" id="security">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-shield-alt me-2 text-warning"></i>
                                @L["Manage.SecurityTitle"]
                            </h5>
                        </div>
                        <div class="card-body">
                            @* show security hint only if string provided *@
                            @if (!string.IsNullOrEmpty(L["Manage.SecurityHint"]))
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    @L["Manage.SecurityHint"]
                                </div>
                            }

                            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                                <a asp-page="/Account/Manage/ChangePassword" class="btn btn-warning btn-lg me-md-2">
                                    <i class="fas fa-key me-2"></i>@L["Manage.ChangePassword"]
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Status toast (only when StatusMessage is present) *@
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="toast-container position-fixed bottom-0 end-0 p-3">
                    <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header bg-success text-white">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong class="me-auto">@L["Common.Success"]</strong>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                        <div class="toast-body">
                            @Model.StatusMessage
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Enhanced tab functionality + auto-dismiss toast
        document.addEventListener('DOMContentLoaded', function() {
            // Activate tab from URL hash
            const hash = window.location.hash;
            if (hash && document.querySelector(`a[href="${hash}"]`)) {
                const tabTriggerEl = document.querySelector(`a[href="${hash}"]`);
                if (tabTriggerEl) {
                    const tab = new bootstrap.Tab(tabTriggerEl);
                    tab.show();
                }
            }

            // Update URL hash on tab change
            const tabTriggers = document.querySelectorAll('[data-bs-toggle="tab"]');
            tabTriggers.forEach(tab => {
                tab.addEventListener('shown.bs.tab', function (e) {
                    try {
                        history.replaceState(null, null, e.target.getAttribute('href'));
                    } catch { /* ignore */ }
                });
            });

            // Auto-dismiss toast after 5 seconds
            const toastEl = document.querySelector('.toast');
            if (toastEl) {
                const bsToast = new bootstrap.Toast(toastEl);
                setTimeout(() => bsToast.hide(), 5000);
            }
        });
    </script>
}


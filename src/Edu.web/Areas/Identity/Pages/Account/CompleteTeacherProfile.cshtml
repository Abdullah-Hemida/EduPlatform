@page
@model Edu.Web.Areas.Identity.Pages.Account.CompleteTeacherProfileModel
@inject Microsoft.Extensions.Localization.IStringLocalizer<Edu.Web.Areas.Identity.Pages.Account.CompleteTeacherProfileModel> L

@{
    Layout = "/Views/Shared/_MentorLayout.cshtml";
    ViewData["Title"] = L["ProfileComplete.Teacher.Title"];
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-3">@L["ProfileComplete.Teacher.Title"]</h3>

                    <form method="post" enctype="multipart/form-data" novalidate>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label">@L["Profile.DisplayNameLabel"]</label>
                            <input asp-for="Input.FullName" class="form-control" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <!-- teacher phone (intl-tel-input like student) -->
                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label">
                                @L["Profile.PhoneLabel"] <i class="fa-brands fa-whatsapp" aria-hidden="true"></i>
                            </label>

                            @* Phone input uses intl-tel-input; dir="ltr" keeps + on the left in RTL pages *@
                            <input asp-for="Input.PhoneNumber" id="phone" class="form-control" placeholder="+39 345 123 4567" dir="ltr" />

                            <div class="form-text">@L["Profile.PhoneHelp"]</div>

                            @* Server-side ModelState message (rendered) *@
                            <span id="phoneError" class="text-danger field-validation">
                                @Html.Raw(ViewData.ModelState[nameof(Model.Input.PhoneNumber)]?.Errors.FirstOrDefault()?.ErrorMessage)
                            </span>

                            @* unobtrusive validation slot (kept for client validation wiring) *@
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger visually-hidden"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.DateOfBirth" class="form-label">@L["Profile.DateOfBirth"]</label>
                            <input asp-for="Input.DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PreferredLanguage" class="form-label">@L["Profile.PreferredLanguage"]</label>
                            <select asp-for="Input.PreferredLanguage" class="form-control">
                                <option value="en">English</option>
                                <option value="it">Italiano</option>
                                <option value="ar">العربية</option>
                            </select>
                            <span asp-validation-for="Input.PreferredLanguage" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@L["Profile.UploadPhotoLabel"]</label>
                            <input type="file" asp-for="Photo" class="form-control" />

                            @if (!string.IsNullOrEmpty(Model.Input.PhotoDisplayUrl))
                            {
                                <div class="mt-2"><small class="text-muted">@L["Profile.CurrentPhoto"]</small></div>
                                <img src="@Model.Input.PhotoDisplayUrl"
                                     class="rounded mt-2"
                                     style="width:120px;height:120px;object-fit:cover" />
                            }
                        </div>

                        <hr />

                        <h5>@L["Manage.TeacherSectionTitle"]</h5>

                        <div class="mb-3">
                            <label asp-for="Input.JobTitle" class="form-label">@L["Profile.JobTitleLabel"]</label>
                            <input asp-for="Input.JobTitle" class="form-control" />
                            <span asp-validation-for="Input.JobTitle" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ShortBio" class="form-label">@L["Profile.ShortBioLabel"]</label>
                            <textarea asp-for="Input.ShortBio" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Input.ShortBio" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.IntroVideoUrl" class="form-label">@L["Profile.IntroVideoLabel"]</label>
                            <input asp-for="Input.IntroVideoUrl" class="form-control" />
                            <div class="form-text">@L["Profile.IntroVideoPlaceholder"]</div>
                            <span asp-validation-for="Input.IntroVideoUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@L["Profile.UploadCVLabel"]</label>
                            <input type="file" asp-for="CVFile" class="form-control" />

                            @if (!string.IsNullOrEmpty(Model.Input.CVDisplayUrl))
                            {
                                <div class="mt-2"><a href="@Model.Input.CVDisplayUrl" target="_blank">@L["DownloadCV"]</a></div>
                            }
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="/Account/Manage/Index" class="btn btn-outline-secondary">@L["Button.Cancel"]</a>
                            <button type="submit" class="btn btn-success">@L["ProfileComplete.SaveButton"]</button>
                        </div>
                    </form>
                </div>
            </div>

            @if (TempData["ProfileSaved"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["ProfileSaved"]</div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            // localized values injected into JS
            const localized = {
                defaultRegion: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewData["DefaultRegion"] ?? "IT")),
                preferredCountries: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(new[] { "it", "gb", "us" })),
                errInvalidPhone: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(L["Validation.InvalidPhone"].Value ?? "Please enter a valid phone number."))
            };

            function showFieldError(id, message) {
                const el = document.getElementById(id);
                if (el) {
                    el.textContent = message || '';
                    el.style.display = message ? 'inline' : 'none';
                }
            }

            const phoneInput = document.getElementById('phone');
            window.itiPhone = null;

            // prefix dial code into input when country changes (only if user hasn't already provided an international number)
            function prefixDialCodeIfNeeded(itiInstance, inputEl) {
                if (!itiInstance || !inputEl) return;
                try {
                    const countryData = itiInstance.getSelectedCountryData();
                    if (!countryData || !countryData.dialCode) return;
                    const dial = countryData.dialCode; // e.g. "39"
                    const raw = (inputEl.value || '').trim();
                    // if empty -> insert +<dial> and space
                    if (raw.length === 0) {
                        inputEl.value = '+' + dial + ' ';
                        inputEl.setSelectionRange(inputEl.value.length, inputEl.value.length);
                        inputEl.focus();
                        return;
                    }
                    // if starts with + keep as-is (user entered an explicit international number)
                    if (/^\+/.test(raw)) return;
                    // fallback: if value is short (likely local), prefix dial code
                    const digitsOnly = raw.replace(/\D/g, '');
                    if (digitsOnly.length <= 6) {
                        inputEl.value = '+' + dial + ' ' + digitsOnly;
                        inputEl.setSelectionRange(inputEl.value.length, inputEl.value.length);
                        inputEl.focus();
                    }
                } catch (ex) {
                    console.debug('prefixDialCodeIfNeeded', ex);
                }
            }

            function createIti(el) {
                if (!el || !window.intlTelInput) return null;
                const instance = window.intlTelInput(el, {
                    initialCountry: (localized.defaultRegion || "IT").toLowerCase(),
                    preferredCountries: localized.preferredCountries,
                    separateDialCode: false,
                    utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.min.js"
                });

                // restore server-provided E.164 value into the widget if present
                const currentVal = el.value;
                if (currentVal && currentVal.trim().length > 0) {
                    try { instance.setNumber(currentVal); } catch (ex) { /* ignore */ }
                }

                // when user changes country, auto prefix if needed
                try {
                    instance.on && instance.on('countrychange', function () {
                        prefixDialCodeIfNeeded(instance, el);
                    });
                } catch (ex) { /* ignore */ }

                // also attach to flag click for some browsers
                try {
                    const flagContainer = el.parentNode && el.parentNode.querySelector('.iti__flag-container');
                    if (flagContainer) {
                        flagContainer.addEventListener('click', function () {
                            setTimeout(() => prefixDialCodeIfNeeded(instance, el), 150);
                        });
                    }
                } catch (ex) { /* ignore */ }

                return instance;
            }

            window.itiPhone = createIti(phoneInput);
            const itiPhone = window.itiPhone;

            const form = phoneInput ? phoneInput.closest('form') : null;
            if (!form) return;

            // detect server-side errors to avoid duplicating them in client
            const serverHasPhoneError = !!(document.getElementById('phoneError') && document.getElementById('phoneError').textContent.trim().length > 0);

            // robust extractor for E.164 (tries intl-tel-input first, falls back to sanitizing digits)
            function getE164Safe(itiInstance, inputEl) {
                if (!inputEl) return null;
                try {
                    if (itiInstance && typeof itiInstance.getNumber === 'function') {
                        const n = itiInstance.getNumber();
                        if (n && n.trim().length > 0) return n;
                    }
                } catch (ex) { /* ignore */ }

                const raw = inputEl.value || '';
                const digits = raw.replace(/\D/g, '');
                if (digits.length >= 6 && digits.length <= 15) return '+' + digits;
                return null;
            }

            form.addEventListener('submit', function (ev) {
                // clear client errors if server didn't render one
                if (!serverHasPhoneError) showFieldError('phoneError', '');

                if (phoneInput && phoneInput.value && phoneInput.value.trim().length > 0) {
                    const e164 = getE164Safe(itiPhone, phoneInput);
                    if (!e164) {
                        ev.preventDefault();
                        if (!serverHasPhoneError) showFieldError('phoneError', localized.errInvalidPhone);
                        phoneInput.focus();
                        return false;
                    } else {
                        phoneInput.value = e164;
                    }
                }

                return true;
            });
        })();
    </script>
}




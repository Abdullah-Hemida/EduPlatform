@model AdminHeroVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = (Model.Id == 0) ? (L["Admin.CreateHero"] ?? "Create hero") : (L["Admin.EditHero"] ?? "Edit hero");
}

<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label">@L["Admin.Placement"]</label>
                <select asp-for="Placement" class="form-select">
                    <option value="0">@L["Admin.Home"] ?? "Home"</option>
                    <option value="1">@L["Admin.School"] ?? "School"</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">@L["Admin.Image"]</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ImageStorageKey))
                {
                    <div class="mt-2">
                        <img src="@Model.ImageStorageKey" style="max-width:220px;max-height:120px;object-fit:cover;border-radius:8px" />
                        <div class="form-text">@L["Admin.HeroCurrentImage"]</div>
                    </div>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">@L["Admin.Order"]</label>
                <input asp-for="Order" class="form-control" />
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" />
                <label class="form-check-label">@(L["Admin.IsActive"] ?? "Is active")</label>
            </div>
        </div>

        <div class="col-md-6">
            <h5>@L["Admin.Title"]</h5>
            <div class="mb-2">
                <label class="form-label">English</label>
                <input asp-for="TitleEn" class="form-control" />
            </div>
            <div class="mb-2">
                <label class="form-label">Italiano</label>
                <input asp-for="TitleIt" class="form-control" />
            </div>
            <div class="mb-2">
                <label class="form-label">العربية</label>
                <input asp-for="TitleAr" class="form-control" />
            </div>

            <h5 class="mt-3">@L["Admin.Description"]</h5>
            <div class="mb-2">
                <label class="form-label">English</label>
                <textarea asp-for="DescriptionEn" class="form-control" rows="3"></textarea>
            </div>
            <div class="mb-2">
                <label class="form-label">Italiano</label>
                <textarea asp-for="DescriptionIt" class="form-control" rows="3"></textarea>
            </div>
            <div class="mb-2">
                <label class="form-label">العربية</label>
                <textarea asp-for="DescriptionAr" class="form-control" rows="3"></textarea>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">@L["Admin.Save"]</button>
        <a asp-action="Index" class="btn btn-light">@L["Admin.Cancel"]</a>
    </div>
</form>


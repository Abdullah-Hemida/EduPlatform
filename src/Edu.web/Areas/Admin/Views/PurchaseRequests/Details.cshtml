@model Edu.Web.Areas.Admin.ViewModels.PurchaseRequestListItemVm
@using System.Globalization
@inject Microsoft.Extensions.Localization.IStringLocalizer<Edu.Web.Areas.Admin.Controllers.PurchaseRequestsController> L

@{
     
    ViewData["Title"] = L["Admin.PurchaseRequestDetails"];
}

<div class="mb-3 d-flex align-items-center justify-content-between">
    <div>
        <h3 class="mb-0">@L["PurchaseRequest.Details.Title"]</h3>
        <small class="text-muted">@L["PurchaseRequest.Details.Subtitle"]</small>
    </div>
    <div>
        <a asp-action="Index" asp-area="Admin" class="btn btn-sm btn-light">@L["Admin.BackToList"]</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <h6 class="text-muted">@L["Purchase.Requester"]</h6>
                <div class="fw-semibold">@(Model.StudentName ?? "—")</div>
                <div class="small text-muted">@(Model.StudentPhone ?? "—")</div>
                <div>@L["GuardianPhoneNumber"]: @(Model.GuardianPhoneNumber ?? "_")</div>
            </div>

            <div class="col-md-6">
                <h6 class="text-muted">@L["Purchase.Course"]</h6>
                <div class="fw-semibold">@(Model.CourseTitle ?? "—")</div>
                <div class="small text-muted">@L["Purchase.By"] @Model.TeacherName</div>
            </div>

            <div class="col-md-4">
                <h6 class="text-muted">@L["Purchase.Date"]</h6>
                <div class="fw-semibold">@Model.RequestDateUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
            </div>

            <div class="col-md-4">
                <h6 class="text-muted">@L["Purchase.Amount"]</h6>
                <div class="fw-semibold">
                    @(Model.AmountLabel)
                </div>

            <div class="col-md-4">
                <h6 class="text-muted">@L["Purchase.Status"]</h6>
                <div>
                    <span class="badge @(Model.Status == "Completed" ? "bg-success" : (Model.Status == "Rejected" ? "bg-danger" : "bg-secondary"))">@Model.Status</span>
                </div>
            </div>

            <div class="col-12">
                <h6 class="text-muted">@L["Purchase.AdminNote"]</h6>
                <div class="small text-muted">@(!string.IsNullOrEmpty(Model.AdminNote) ? Model.AdminNote : L["Admin.NoNotes"])</div>
            </div>
        </div>

        <hr />

        <div class="d-flex gap-2 mt-2">
            @if (Model.Status == "Pending")
            {
                <form method="post" asp-action="Complete" asp-area="Admin" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button class="btn btn-success">@L["Purchase.MarkCompleted"]</button>
                </form>

                <form method="post" asp-action="Reject" asp-area="Admin" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button class="btn btn-warning">@L["Button.Reject"]</button>
                </form>
            }

            <a asp-action="Index" asp-area="Admin" class="btn btn-light">@L["Button.Close"]</a>
        </div>
    </div>
</div>
</div>


@model Edu.Web.Areas.Admin.ViewModels.PurchaseRequestListItemVm
@using Edu.Domain.Entities
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Admin.PurchaseRequestDetails"];
}

<div class="mb-3 d-flex align-items-center justify-content-between">
    <div>
        <h3 class="mb-0">@L["PurchaseRequest.Details.Title"]</h3>
        <small class="text-muted">@L["PurchaseRequest.Details.Subtitle"]</small>
    </div>
    <div>
        <a asp-action="Index" asp-area="Admin" class="btn btn-sm btn-light">@L["Admin.BackToList"]</a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <h6 class="text-muted">@L["Purchase.Requester"]</h6>
                <div class="fw-semibold">@(Model.StudentName ?? "—")</div>
                <div>
                    <span class="small text-muted d-flex align-items-center gap-2">
                        <span dir="ltr" class="ltr-phone">@(Model.StudentPhone ?? "—")</span>
                        <span dir="ltr">
                            @if (!string.IsNullOrEmpty(Model.PhoneWhatsapp))
                            {
                                @await Html.PartialAsync("~/Views/Shared/_WhatsAppChatButton.cshtml", Model.PhoneWhatsapp)
                            }
                        </span>
                    </span>
                </div>
                <div class="d-flex align-items-center gap-2 mt-2">
                    <strong>@L["GuardianPhoneNumber"]:</strong>
                    <span dir="ltr" class="ltr-phone">@(Model.GuardianPhoneNumber ?? "—")</span>
                    <span dir="ltr">
                        @if (!string.IsNullOrEmpty(Model.GuardianWhatsapp))
                        {
                            @await Html.PartialAsync("~/Views/Shared/_WhatsAppChatButton.cshtml", Model.GuardianWhatsapp)
                        }
                    </span>
                </div>
            </div>

            <div class="col-md-6">
                <h6 class="text-muted">@L["Purchase.Course"]</h6>
                <div class="fw-semibold">@(Model.CourseTitle ?? "—")</div>
                <div class="small text-muted">@L["Purchase.By"] @Model.TeacherName</div>
            </div>

            <div class="col-md-4">
                <h6 class="text-muted">@L["Purchase.Date"]</h6>
                <div class="fw-semibold">@Model.RequestDateUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
            </div>

            <div class="col-md-4">
                <h6 class="text-muted">@L["Purchase.Amount"]</h6>
                <div class="fw-semibold">
                    @(Model.AmountLabel)
                </div>
            </div>

            <div class="col-md-4">
                <h6 class="text-muted">@L["Purchase.Status"]</h6>
                <div>
                    @{
                        var badgeClass = Model.Status switch
                        {
                            PurchaseStatus.Completed => "bg-success",
                            PurchaseStatus.Rejected => "bg-danger",
                            PurchaseStatus.Pending => "bg-warning text-dark",
                            PurchaseStatus.Cancelled => "bg-secondary",
                            _ => "bg-secondary"
                        };

                        var localizedStatus = Model.Status switch
                        {
                            PurchaseStatus.Completed => L["Status.Completed"],
                            PurchaseStatus.Rejected => L["Status.Rejected"],
                            PurchaseStatus.Pending => L["Status.Pending"],
                            PurchaseStatus.Cancelled => L["Status.Cancelled"],
                            _ => L["Status.Unknown", Model.Status.ToString()]
                        };
                    }
                    <span class="badge @badgeClass">@localizedStatus</span>
                </div>
            </div>

            <div class="col-12">
                <h6 class="text-muted">@L["Purchase.AdminNote"]</h6>
                <div class="small text-muted">@(!string.IsNullOrEmpty(Model.AdminNote) ? Model.AdminNote : L["Admin.NoNotes"])</div>
            </div>
        </div>

        <hr />

        <div class="d-flex gap-2 mt-2">
            @if (Model.Status == PurchaseStatus.Pending)
            {
                <form method="post" asp-action="Complete" asp-area="Admin" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button class="btn btn-success">@L["Purchase.MarkCompleted"]</button>
                </form>

                <form method="post" asp-action="Reject" asp-area="Admin" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button class="btn btn-warning">@L["Button.Reject"]</button>
                </form>
            }

            <a asp-action="Index" asp-area="Admin" class="btn btn-light">@L["Button.Close"]</a>
        </div>
    </div>
</div>



@model Edu.Web.Areas.Admin.ViewModels.SchoolEnrollmentIndexVm
@using System.Globalization
@using System.Text.Json
@using Edu.Web.Resources
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Admin.SchoolEnrollments.Title"] ?? "Enrollments";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<div class="row mb-3 g-2 align-items-center">
    <div class="col-12 col-md-8">
        <form method="get" class="row gx-2 gy-2 align-items-center" id="searchForm">
            <div class="col-12 col-sm-8">
                <input name="q" value="@Model.Query" class="form-control form-control-sm" placeholder="@L["Admin.Search.Placeholder"]" />
            </div>

            <div class="col-6 col-sm-2 col-md-2">
                <select name="pageSize" class="form-select form-select-sm">
                    <option value="10" selected="@(Model.PageSize == 10 ? "selected" : null)">10</option>
                    <option value="20" selected="@(Model.PageSize == 20 ? "selected" : null)">20</option>
                    <option value="50" selected="@(Model.PageSize == 50 ? "selected" : null)">50</option>
                </select>
            </div>

            <div class="col-6 col-sm-2 col-md-2">
                <button class="btn btn-primary btn-sm w-100">@L["Admin.Search.Button"]</button>
            </div>
        </form>
    </div>

    <div class="col-12 col-md-4">
        <form id="delete-old-form" class="d-flex gap-2 justify-content-md-end">
            <input type="date" id="olderThan" class="form-control form-control-sm" aria-label="@L["Admin.DeleteOld.Date"]" />
            <button id="btnDeleteOld" class="btn btn-danger btn-sm text-nowrap">@L["Admin.DeleteOld.Button"]</button>
        </form>
    </div>
</div>

@* antiforgery token for AJAX *@
<form class="d-none">@Html.AntiForgeryToken()</form>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">@L["Admin.NoRecords"]</div>
}
else
{
    <div class="table-responsive d-none d-md-block">
        <table class="table table-striped table-hover align-middle mb-0 small">
            <thead class="table-light">
                <tr>
                    <th style="width:36px">#</th>
                    <th>@L["Admin.Course"]</th>
                    <th>@L["Admin.Teacher"]</th>
                    <th>@L["Admin.Student"]</th>
                    <th style="width:140px">@L["Admin.Created"]</th>
                    <th style="width:80px" class="text-center">@L["Admin.Paid"]</th>
                    <th style="width:80px" class="text-center">@L["Admin.Pending"]</th>
                    <th style="width:220px" class="text-end">@L["Admin.Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var idx = (Model.Page - 1) * Model.PageSize;
                }
                @foreach (var it in Model.Items)
                {
                    idx++;
                    <tr data-enrollment-id="@it.EnrollmentId">
                        <td class="small text-muted">@idx</td>
                        <td class="align-middle">@it.CourseTitle</td>
                        <td class="align-middle">@it.TeacherFullName</td>
                        <td class="align-middle">
                            <div class="d-flex align-items-center gap-2">
                                @if (!string.IsNullOrEmpty(it.StudentPhotoUrl))
                                {
                                    <img src="@it.StudentPhotoUrl" width="40" height="40" class="rounded-circle" alt="photo" />
                                }
                                <div class="small">
                                    <div class="fw-semibold">@it.StudentFullName</div>
                                    <div class="text-muted">@it.StudentEmail</div>
                                    <div>
                                        <span dir="ltr" class="ltr-phone">@(it.StudentPhone ?? "—")</span>
                                        <span dir="ltr">
                                            @if (!string.IsNullOrWhiteSpace(it.PhoneWhatsapp))
                                            {
                                                @await Html.PartialAsync("~/Views/Shared/_WhatsAppChatButton.cshtml", it.PhoneWhatsapp)
                                            }
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle small">@it.CreatedAtUtc.ToLocalTime().ToString("g")</td>
                        <td class="align-middle text-center">@it.PaidMonthsCount</td>
                        <td class="align-middle text-center">@it.PendingMonthsCount</td>

                        <td class="text-end align-middle">
                            <div class="d-flex flex-nowrap gap-2 justify-content-end overflow-auto">
                                <a asp-area="Admin" asp-controller="SchoolEnrollments" asp-action="Details"
                                   asp-route-id="@it.EnrollmentId" class="btn btn-sm btn-outline-primary">@L["Admin.Details"]</a>

                                <button type="button" class="btn btn-sm btn-outline-danger btn-delete-enrollment"
                                        data-enrollment-id="@it.EnrollmentId">
                                    @L["Admin.Delete"]
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-md-none">
        <div class="row g-2">
            @{
                var cidx = (Model.Page - 1) * Model.PageSize;
            }
            @foreach (var it in Model.Items)
            {
                cidx++;
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <div>
                                    <div class="small text-muted">#</div>
                                    <div class="fw-semibold">@cidx</div>
                                </div>
                                <div class="text-end">
                                    <div class="small text-muted">@L["Admin.Created"]</div>
                                    <div class="small">@it.CreatedAtUtc.ToLocalTime().ToString("g")</div>
                                </div>
                            </div>

                            <div class="mb-2">
                                <div class="small text-muted">@L["Admin.Course"]</div>
                                <div class="fw-semibold">@it.CourseTitle</div>
                            </div>

                            <div class="mb-2">
                                <div class="small text-muted">@L["Admin.Teacher"]</div>
                                <div>@it.TeacherFullName</div>
                            </div>

                            <div class="mb-2">
                                <div class="small text-muted">@L["Admin.Student"]</div>
                                <div class="d-flex gap-2 align-items-center">
                                    @if (!string.IsNullOrEmpty(it.StudentPhotoUrl))
                                    {
                                        <img src="@it.StudentPhotoUrl" width="40" height="40" class="rounded-circle" alt="photo" />
                                    }
                                    <div class="small">
                                        <div class="fw-semibold">@it.StudentFullName</div>
                                        <div class="text-muted">@it.StudentEmail</div>
                                        <div class="text-muted">@it.StudentPhone</div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="small text-muted">@L["Admin.Paid"]</div>
                                    <div class="fw-semibold">@it.PaidMonthsCount</div>
                                </div>
                                <div class="text-end">
                                    <div class="small text-muted">@L["Admin.Pending"]</div>
                                    <div class="fw-semibold">@it.PendingMonthsCount</div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-white d-flex flex-nowrap gap-2 overflow-auto">
                            <a asp-area="Admin" asp-controller="SchoolEnrollments" asp-action="Details"
                               asp-route-id="@it.EnrollmentId" class="btn btn-sm btn-outline-primary">@L["Admin.Details"]</a>

                            <button type="button" class="btn btn-sm btn-outline-danger btn-delete-enrollment"
                                    data-enrollment-id="@it.EnrollmentId">
                                @L["Admin.Delete"]
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center justify-content-md-end">
            @{
                var current = Model.Page;
                var total = Model.TotalPages;
                string q = Model.Query ?? "";
                for (int p = 1; p <= total; p++)
                {
                    <li class="page-item @(p == current ? "active" : "")">
                        <a class="page-link" href="?q=@Uri.EscapeDataString(q)&page=@p&pageSize=@Model.PageSize">@p</a>
                    </li>
                }
            }
        </ul>
    </nav>
}

<div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index:2050">
    <div id="toast-container-admin"></div>
</div>

@{
    var jsTexts = JsonSerializer.Serialize(new
    {
        confirmDelete = L["Admin.Enrollment.ConfirmDelete"].Value,
        deleteSuccess = L["Admin.Enrollment.DeleteSuccess"].Value,
        deleteError = L["Admin.Enrollment.DeleteError"].Value ?? L["Admin.Common.Error"].Value,
        deleteOldPickDate = L["Admin.DeleteOld.PickDate"].Value,
        deleteOldConfirm = L["Admin.DeleteOld.Confirm"].Value,
        deleteOldSuccess = L["Admin.DeleteOldSuccess"].Value,
        commonError = L["Admin.Common.Error"].Value
    });
}

@section Scripts {
    <script>
        $(function () {
            const texts = @Html.Raw(jsTexts);

            const anti = $('input[name="__RequestVerificationToken"]').first().val() || '';

            function showToast(msg, type = 'success') {
                const $c = $('#toast-container-admin');
                const $t = $(`<div class="toast text-bg-${type} border-0" role="alert"><div class="d-flex"><div class="toast-body">${msg}</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div></div>`);
                $c.append($t);
                new bootstrap.Toast($t[0], { delay: 3500 }).show();
                $t.on('hidden.bs.toast', () => $t.remove());
            }

            $(document).on('click', '.btn-delete-enrollment', function () {
                const id = $(this).data('enrollment-id');
                if (!confirm(texts.confirmDelete)) return;
                $.ajax({
                    url: '/Admin/SchoolEnrollments/Delete',
                    method: 'POST',
                    data: { enrollmentId: id, __RequestVerificationToken: anti },
                    success: function (res) {
                        if (res && res.success) {
                            showToast(res.message || texts.deleteSuccess, 'success');
                            $(`tr[data-enrollment-id="${id}"]`).remove();
                            $(`.card .btn-delete-enrollment[data-enrollment-id="${id}"]`).closest('.col-12').remove();
                        } else {
                            showToast(res?.message || texts.deleteError, 'danger');
                        }
                    },
                    error: function () { showToast(texts.deleteError, 'danger'); }
                });
            });

            $('#btnDeleteOld').on('click', function (e) {
                e.preventDefault();
                const dateVal = $('#olderThan').val();
                if (!dateVal) { showToast(texts.deleteOldPickDate, 'danger'); return; }
                if (!confirm(texts.deleteOldConfirm)) return;
                const dt = new Date(dateVal + 'T00:00:00Z');
                $.ajax({
                    url: '/Admin/SchoolEnrollments/DeleteOld',
                    method: 'POST',
                    data: { olderThanUtc: dt.toISOString(), __RequestVerificationToken: anti },
                    success: function (res) {
                        if (res && res.success) {
                            showToast(res.message || texts.deleteOldSuccess, 'success');
                            setTimeout(() => location.reload(), 700);
                        } else {
                            showToast(res?.message || texts.deleteError, 'danger');
                        }
                    },
                    error: function () { showToast(texts.deleteError, 'danger'); }
                });
            });
        });
    </script>
}


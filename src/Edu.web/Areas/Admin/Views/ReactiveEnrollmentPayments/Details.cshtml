@model Edu.Web.Areas.Admin.ViewModels.PaymentDetailsVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["ReactiveCourse.PaymentDetails"] ?? "Payment Details";
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            @if (!string.IsNullOrEmpty(Model.CourseCoverPublicUrl))
            {
                <img src="@Model.CourseCoverPublicUrl" class="card-img-top" style="height:200px;object-fit:cover" />
            }
            <div class="card-body">
                <h4>@Model.CourseTitle</h4>
                <p><strong>@L["ReactiveCourse.TheMonths"]:</strong> @Model.MonthIndex</p>
                <p><strong>@L["Admin.FullName"]:</strong> @Model.StudentDisplayName</p>
                <p><strong>@L["Purchase.Amount"]:</strong> @Model.AmountLabel</p>
                <p><strong>@L["Purchase.Date"]:</strong> @Model.CreatedAtUtc.ToLocalTime().ToString("g")</p>
                <p><strong>@L["Purchase.AdminNote"]:</strong> @Model.Notes</p>
            </div>
        </div>

        <div class="mb-3">
            <form asp-asp-area="Admin" asp-controller="ReactiveEnrollmentPayments" asp-action="MarkPaid" class="row g-2">
                <input type="hidden" name="PaymentId" value="@Model.Id" />
                <div class="col-md-4">
                    <label class="form-label">@L["Purchase.Amount"]</label>
                    <input name="Amount" class="form-control" value="@Model.Amount" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@L["Purchase.AdminNote"]</label>
                    <input name="PaymentReference" class="form-control" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-success text-nowrap">@L["Booking.MarkPaid"]</button>
                </div>
            </form>
        </div>

        <div>
            <form asp-action="Reject" method="post">
                <input type="hidden" name="PaymentId" value="@Model.Id" />
                <div class="mb-2">
                    <label class="form-label">@L["Button.Reject"]</label>
                    <textarea name="Reason" class="form-control" required></textarea>
                </div>
                <button class="btn btn-danger">@L["Button.Reject"]</button>
            </form>
        </div>
    </div>

    <div class="col-md-4">
        <a asp-action="Pending" class="btn btn-light">
            <i class="fas fa-arrow-left me-1 d-none d-rtl-none"></i>
            <i class="fas fa-arrow-right ms-1 d-none d-ltr-none"></i>
            @L["Common.Back"]
        </a>
    </div>
</div>




@model Edu.Web.Areas.Admin.ViewModels.PendingPaymentsVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["ReactiveCourse.PendingPayments"] ?? "Pending Payments";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>@L["ReactiveCourse.PendingPayments"]</h3>
</div>

@if (!Model.Payments.Any())
{
    <div class="alert alert-info">@L["Admin.NoRecords"]</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@L["Admin.Course"]</th>
                <th>@L["Admin.Month"]</th>
                <th>@L["Admin.FullName"]</th>
                <th>@L["Purchase.Amount"]</th>
                <th>@L["Purchase.Date"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Payments)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            @if (!string.IsNullOrEmpty(p.CourseCoverPublicUrl))
                            {
                                <img src="@p.CourseCoverPublicUrl" style="height:48px;width:80px;object-fit:cover" class="rounded" />
                            }
                            <div>@p.CourseTitle</div>
                        </div>
                    </td>
                    <td>@p.MonthIndex</td>
                    <td>@p.StudentDisplayName</td>
                    <td>@p.AmountLabel</td>
                    <td>@p.CreatedAtUtc.ToLocalTime().ToString("g")</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary">@L["Button.View"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}




@model Edu.Web.Areas.Admin.ViewModels.LevelEditVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Admin.EditLevel"];
}

<h3 class="mb-3">@L["Admin.EditLevel"]</h3>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="NameEn" class="form-label">@L["AdminLevel.NameEn"]</label>
            <input asp-for="NameEn" class="form-control" />
            <span asp-validation-for="NameEn" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="NameIt" class="form-label">@L["AdminLevel.NameIt"]</label>
            <input asp-for="NameIt" class="form-control" />
            <span asp-validation-for="NameIt" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="NameAr" class="form-label">@L["AdminLevel.NameAr"]</label>
            <input asp-for="NameAr" class="form-control" dir="rtl" />
            <span asp-validation-for="NameAr" class="text-danger small"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Order" class="form-label">@L["Admin.Order"]</label>
            <input asp-for="Order" class="form-control" />
            <span asp-validation-for="Order" class="text-danger small"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary me-2">
            <i class="fas fa-save me-1"></i> @L["Button.SaveChanges"]
        </button>
        <a asp-action="Index" class="btn btn-secondary">@L["Button.Cancel"]</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




@model Edu.Domain.Entities.Level
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
     
    ViewData["Title"] = L["Button.Edit"] + " - " + (Model?.Name ?? "");
}

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="mb-3">@L["Button.Edit"]</h4>

        <form asp-action="Edit" method="post" class="row g-3 needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />

            <div class="col-md-8">
                <label asp-for="Name" class="form-label">@L["Admin.Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Order" class="form-label">@L["Admin.Order"]</label>
                <input asp-for="Order" type="number" class="form-control" />
                <span asp-validation-for="Order" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">@(L["Button.Save"] ?? @L["Button.Edit"])</button>
                <a asp-action="Index" class="btn btn-link">@L["Button.Cancel"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



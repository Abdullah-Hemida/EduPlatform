@model IEnumerable<LevelAdminListItemVm>
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Admin.Levels.Title"];
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">@L["Admin.Levels.Title"]</h3>

    <a asp-action="Create" class="btn btn-primary">
        @L["Admin.AddLevel"] <i class="fas fa-plus-circle ms-1"></i>
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped table-hover align-middle">
    <thead class="table-light small">
        <tr>
            <th style="width:60px">#</th>
            <th>@L["AdminLevel.NameEn"]</th>
            <th>@L["AdminLevel.NameIt"]</th>
            <th>@L["AdminLevel.NameAr"]</th>
            <th style="width:110px">@L["Admin.Order"]</th>
            <th style="width:160px" class="text-end">@L["Admin.Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center small text-muted">@L["Admin.NoRecords"]</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="small text-muted">@item.Id</td>
                    <td>@item.NameEn</td>
                    <td>@item.NameIt</td>
                    <td dir="rtl">@item.NameAr</td>
                    <td>@item.Order</td>
                    <td class="text-end text-nowrap">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">
                            <i class="fas fa-edit me-1"></i> @L["Button.Edit"]
                        </a>

                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                              onsubmit="return confirm('@L["Admin.ConfirmDelete"]');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash me-1"></i> @L["Button.Delete"]
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



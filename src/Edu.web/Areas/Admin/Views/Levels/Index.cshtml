@model IEnumerable<LevelAdminListItemVm>
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Admin.Levels"];
}

<!-- Header: Title + Add Button -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3">
    <h3 class="m-0">@L["Admin.Levels"]</h3>

    <a asp-action="Create" class="btn btn-primary text-nowrap">
        @L["Admin.AddLevel"]
        <i class="fas fa-plus-circle ms-1"></i>
    </a>
</div>

<!-- TABLE for md+ -->
<div class="table-responsive d-none d-md-block">
    <table class="table table-striped table-hover align-middle mb-0">
        <thead class="table-light small">
            <tr>
                <th style="width:60px">#</th>
                <th>@L["AdminLevel.NameEn"]</th>
                <th>@L["AdminLevel.NameIt"]</th>
                <th>@L["AdminLevel.NameAr"]</th>
                <th style="width:110px">@L["Admin.Order"]</th>
                <th class="text-end text-nowrap" style="width:160px">@L["Admin.Actions"]</th>
            </tr>
        </thead>

        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center small text-muted">
                        @L["Admin.NoRecords"]
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td class="small text-muted">@item.Id</td>
                        <td>@item.NameEn</td>
                        <td>@item.NameIt</td>
                        <td dir="rtl">@item.NameAr</td>
                        <td>@item.Order</td>

                        <td class="text-end text-nowrap">
                            <div class="d-flex justify-content-end flex-wrap gap-1">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-edit me-1"></i>@L["Button.Edit"]
                                </a>

                                <form asp-action="Delete" asp-route-id="@item.Id"
                                      method="post" class="m-0 d-inline"
                                      onsubmit="return confirm('@L["Admin.ConfirmDelete"]');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="fas fa-trash me-1"></i>@L["Button.Delete"]
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- CARDS for small screens -->
<div class="d-md-none">
    @if (!Model.Any())
    {
        <div class="text-center small text-muted py-3">@L["Admin.NoRecords"]</div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="card mb-2">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <div class="small text-muted">#</div>
                            <div class="fw-semibold">@item.Id</div>
                        </div>

                        <div class="text-end">
                            <div class="small text-muted">@L["Admin.Order"]</div>
                            <div class="fw-semibold">@item.Order</div>
                        </div>
                    </div>

                    <div class="mb-2">
                        <div class="small text-muted">@L["AdminLevel.NameEn"]</div>
                        <div class="fw-semibold">@item.NameEn</div>
                    </div>

                    <div class="mb-2">
                        <div class="small text-muted">@L["AdminLevel.NameIt"]</div>
                        <div>@item.NameIt</div>
                    </div>

                    <div class="mb-2" dir="rtl">
                        <div class="small text-muted">@L["AdminLevel.NameAr"]</div>
                        <div class="text-end">@item.NameAr</div>
                    </div>
                </div>

                <!-- single-line action footer: inline, scrollable if overflow -->
                <div class="card-footer bg-white d-flex flex-nowrap gap-2 overflow-auto">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-edit me-1"></i>@L["Button.Edit"]
                    </a>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="m-0 d-inline-block"
                          onsubmit="return confirm('@L["Admin.ConfirmDelete"]');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash me-1"></i>@L["Button.Delete"]
                        </button>
                    </form>
                </div>
            </div>
        }
    }
</div>





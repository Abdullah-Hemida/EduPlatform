@model Edu.Web.Areas.Admin.ViewModels.AdminBookingsIndexVm
@using Edu.Domain.Entities
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Admin.Bookings"] ?? "Bookings";
    var request = ViewContext.HttpContext.Request;
    var tab = (Model?.Tab ?? request.Query["tab"].FirstOrDefault() ?? "upcoming").ToString().ToLowerInvariant();
    var statusFilter = Model?.StatusFilter;
    var page = Model?.Page ?? 1;
    var pageSize = Model?.PageSize ?? 20;
}

<h3 class="mb-3">@L["Admin.Bookings"]</h3>

<!-- Tabs: scrollable on small screens -->
<nav class="mb-3">
    <div class="overflow-auto" style="-webkit-overflow-scrolling: touch;">
        <ul class="nav nav-tabs flex-nowrap">
            <li class="nav-item">
                <a class="nav-link @(tab == "upcoming" ? "active" : "")"
                   href="@Url.Action("Index", new { status = statusFilter, tab = "upcoming", page = 1 })">
                    @(L["Booking.Tab.Upcoming"] ?? "Upcoming")
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(tab == "past" ? "active" : "")"
                   href="@Url.Action("Index", new { status = statusFilter, tab = "past", page = 1 })">
                    @(L["Booking.Tab.Past"] ?? "Past")
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(tab == "all" ? "active" : "")"
                   href="@Url.Action("Index", new { status = statusFilter, tab = "all", page = 1 })">
                    @(L["Booking.Tab.All"] ?? "All")
                </a>
            </li>
        </ul>
    </div>
</nav>

<!-- Filter bar -->
<div class="mb-3">
    <form method="get" class="row gx-2 gy-2 align-items-center">
        <input type="hidden" name="tab" value="@tab" />
        <div class="col-12 col-sm-auto">
            <select name="status" class="form-select form-select-sm">
                <option value="">@L["Common.All"]</option>
                @foreach (var s in Enum.GetValues(typeof(BookingStatus)).Cast<BookingStatus>())
                {
                    <option value="@s" selected="@(string.Equals(statusFilter, s.ToString(), StringComparison.OrdinalIgnoreCase))">@L[$"Booking.Status.{s}"]</option>
                }
            </select>
        </div>

        <div class="col-auto">
            <button class="btn btn-primary btn-sm">@L["Button.Filter"]</button>
        </div>

        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">@L["Admin.Reset"]</a>
        </div>
    </form>
</div>

@if (!Model.Bookings.Any())
{
    <div class="alert alert-info">@L["Admin.NoRecords"]</div>
}
else
{
    <!-- Table for md+ -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-striped align-middle mb-0">
            <thead class="table-light small">
                <tr>
                    <th>@L["Slots.Times"]</th>
                    <th>@L["Booking.Student"]</th>
                    <th>@L["Booking.Teacher"]</th>
                    <th style="width:140px;">@L["Booking.Status"]</th>
                    <th style="width:120px;">@L["Booking.Price"]</th>
                    <th class="text-end" style="width:260px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model.Bookings)
                {
                    <tr>
                        <td>@(b.SlotTimes ?? "-")</td>
                        <td>
                            <div class="fw-semibold">@(!string.IsNullOrEmpty(b.StudentName) ? b.StudentName : "-")</div>
                            <div class="small text-muted">@b.StudentEmail</div>
                            <div class="small text-muted">@b.StudentPhoneNumber</div>
                        </td>
                        <td>@(b.TeacherName ?? "-")</td>
                        <td>
                            <span id="badge-@b.Id"
                                  class="badge booking-status-badge @(b.Status == BookingStatus.Paid ? "bg-success" : "bg-warning text-dark")">
                                @(L[$"Booking.Status.{b.Status}"] ?? b.Status.ToString())
                            </span>
                        </td>
                        <td>
                            <span id="price-@b.Id">@(b.PriceLabel ?? "-")</span>
                        </td>
                        <td class="text-end">
                            <!-- Inline action buttons (nowrap, scrollable if overflow) -->
                            <div class="d-flex flex-nowrap gap-2 justify-content-end overflow-auto">
                                <a asp-action="Details" asp-area="Admin" asp-route-id="@b.Id" class="btn btn-sm btn-outline-primary">
                                    @L["Button.View"]
                                </a>

                                @if (b.Status != BookingStatus.Paid)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-success ms-1 mark-paid-btn"
                                            data-id="@b.Id" title="@L["Booking.MarkPaid"]">
                                        @L["Booking.MarkPaid"]
                                    </button>

                                    <form asp-action="Delete" method="post" class="d-inline-block ms-1" onsubmit="return confirm('@L["ConfirmAdminDelete"] ?? " Permanently delete this booking?"');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@b.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">@(L["Admin.Delete"] ?? "Delete")</button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-success ms-1" disabled>@(L["Admin.Paid"] ?? "Paid")</button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Cards for small screens -->
    <div class="d-md-none">
        <div class="row g-2">
            @foreach (var b in Model.Bookings)
            {
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2 align-items-start">
                                <div>
                                    <div class="small text-muted">@L["Slots.Times"]</div>
                                    <div class="fw-semibold">@(b.SlotTimes ?? "-")</div>
                                </div>

                                <div class="text-end">
                                    <div class="small text-muted">@L["Booking.Status"]</div>
                                    <div>
                                        <span id="badge-@b.Id"
                                              class="badge booking-status-badge @(b.Status == BookingStatus.Paid ? "bg-success" : "bg-warning text-dark")">
                                            @(L[$"Booking.Status.{b.Status}"] ?? b.Status.ToString())
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-2">
                                <div class="small text-muted">@L["Booking.Student"]</div>
                                <div class="fw-semibold">@(b.StudentName ?? "-")</div>
                                <div class="small text-muted">@b.StudentEmail</div>
                                <div class="small text-muted">@b.StudentPhoneNumber</div>
                            </div>

                            <div class="mb-2">
                                <div class="small text-muted">@L["Booking.Teacher"]</div>
                                <div>@(b.TeacherName ?? "-")</div>
                            </div>

                            <div>
                                <div class="small text-muted">@L["Booking.Price"]</div>
                                <div id="price-@b.Id">@(b.PriceLabel ?? "-")</div>
                            </div>
                        </div>

                        <!-- Single-line footer: actions stay inline, scrollable when necessary -->
                        <div class="card-footer bg-white d-flex flex-nowrap gap-2 overflow-auto">
                            <a asp-action="Details" asp-area="Admin" asp-route-id="@b.Id" class="btn btn-sm btn-outline-primary">
                                @L["Button.View"]
                            </a>

                            @if (b.Status != BookingStatus.Paid)
                            {
                                <button type="button" class="btn btn-sm btn-outline-success mark-paid-btn" data-id="@b.Id" title="@L["Booking.MarkPaid"]">
                                    @L["Booking.MarkPaid"]
                                </button>

                                <form asp-action="Delete" method="post" class="m-0 d-inline-block">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@b.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('@L["ConfirmAdminDelete"] ?? " Permanently delete this booking?"');">
                                        @(L["Admin.Delete"] ?? "Delete")
                                    </button>
                                </form>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-success" disabled>@(L["Admin.Paid"] ?? "Paid")</button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">
            @{
                var current = Model.Page;
                var totalPages = Model.TotalPages;
                int start = Math.Max(1, current - 2);
                int end = Math.Min(totalPages, current + 2);
                Func<int, string> buildUrl = pageNumber => Url.Action("Index", new { status = statusFilter, tab = tab, page = pageNumber });
            }
            <li class="page-item @(current == 1 ? "disabled" : "")">
                <a class="page-link" href="@buildUrl(current - 1)">&laquo;</a>
            </li>
            @for (int i = start; i <= end; i++)
            {
                <li class="page-item @(i == current ? "active" : "")">
                    <a class="page-link" href="@buildUrl(i)">@i</a>
                </li>
            }
            <li class="page-item @(current == totalPages ? "disabled" : "")">
                <a class="page-link" href="@buildUrl(current + 1)">&raquo;</a>
            </li>
        </ul>
    </nav>
}

@* Hidden antiforgery token for AJAX *@
<form id="antiForgeryForm">@Html.AntiForgeryToken()</form>

@section Scripts {
    <script>
        (function () {
            // localize strings safely by serializing them from server to JS
            const texts = {
                confirmMarkPaid: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(L["Booking.ConfirmMarkPaid"].Value ?? "Mark this booking as paid?")),
                promptAmount: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(L["Booking.PromptAmount"].Value ?? "Optional: enter amount (leave empty to keep current)")),
                promptPaymentRef: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(L["Booking.PromptPaymentRef"].Value ?? "Optional: payment reference / note:")),
                invalidAmount: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(L["Booking.InvalidAmount"].Value ?? "Invalid amount — will be ignored.")),
                operationFailed: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(L["Admin.OperationFailed"].Value ?? "Operation failed")),
                serverError: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(L["Admin.ServerError"].Value ?? "Server error, try again.")),
                paidLabel: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(L["Admin.Paid"].Value ?? "Paid")),
                bookingStatusPaid: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(L["Booking.Status.Paid"].Value ?? "Paid"))
            };

            // Get antiforgery token value (from form rendered on page)
            function getAntiForgeryToken() {
                var f = document.getElementById('antiForgeryForm');
                if (!f) return '';
                var tokenInput = f.querySelector('input[name="__RequestVerificationToken"]');
                return tokenInput ? tokenInput.value : '';
            }

            // helper: show simple toast (fallback to alert)
            function showMessage(msg) {
                // if you have a toast implementation use it, else fallback to alert
                try {
                    alert(msg);
                } catch (e) {
                    alert(msg);
                }
            }

            // MarkPaid handler
            async function markPaid(id, btn) {
                if (!confirm(texts.confirmMarkPaid)) return;

                var amountRaw = prompt(texts.promptAmount + ":");
                var amount = null;
                if (amountRaw !== null && amountRaw.trim() !== '') {
                    var parsed = parseFloat(amountRaw.replace(',', '.'));
                    if (!isNaN(parsed)) amount = parsed;
                    else {
                        showMessage(texts.invalidAmount);
                    }
                }
                var paymentRef = prompt(texts.promptPaymentRef);

                var payload = { Id: id, Amount: amount, PaymentRef: paymentRef };

                btn.disabled = true;
                btn.classList.add('disabled');

                try {
                    var res = await fetch('@Url.Action("MarkPaid", "Bookings", new { area = "Admin" })', {
                        method: 'POST',
                        credentials: 'same-origin',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': getAntiForgeryToken(),
                            'Accept': 'application/json'
                        },
                        body: JSON.stringify(payload)
                    });

                    if (!res.ok) {
                        var body = await res.text();
                        throw new Error('Server error: ' + body);
                    }

                    var data = await res.json();
                    if (data && data.success) {
                        // update UI: badge, price, button
                        var badge = document.getElementById('badge-' + id);
                        if (badge) {
                            badge.className = 'badge bg-success';
                            badge.innerText = texts.bookingStatusPaid;
                        }

                        if (data.price != null || data.priceLabel != null) {
                            var priceEl = document.getElementById('price-' + id);
                            if (priceEl) priceEl.innerText = data.priceLabel ?? data.price ?? priceEl.innerText;
                        }

                        var newBtn = document.createElement('button');
                        newBtn.className = 'btn btn-sm btn-success ms-1';
                        newBtn.disabled = true;
                        newBtn.innerText = texts.paidLabel;

                        btn.parentNode.replaceChild(newBtn, btn);
                    } else {
                        showMessage(data?.error ?? texts.operationFailed);
                        btn.disabled = false;
                        btn.classList.remove('disabled');
                    }
                } catch (err) {
                    console.error(err);
                    showMessage(texts.serverError);
                    btn.disabled = false;
                    btn.classList.remove('disabled');
                }
            }

            document.querySelectorAll('.mark-paid-btn').forEach(function (b) {
                b.addEventListener('click', function (e) {
                    var id = parseInt(this.getAttribute('data-id'), 10);
                    markPaid(id, this);
                });
            });
        })();
    </script>
}






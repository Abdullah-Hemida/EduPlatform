@model List<Edu.Web.Areas.Admin.ViewModels.OnlineCourseListItemVm>
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["OnlineCourse.IndexTitle"] ?? "Online Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">@(L["OnlineCourse.IndexTitle"] ?? "Online Courses")</h3>
    <a asp-area="Admin" asp-controller="OnlineCourses" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle me-1"></i> @(L["OnlineCourse.CreateCourse"] ?? "Create course")
    </a>
</div>

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center text-muted">
            @(L["Admin.NoRecords"] ?? "No records.")
        </div>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var c in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(c.CoverPublicUrl))
                    {
                        <img src="@c.CoverPublicUrl" class="card-img-top" alt="@c.Title" style="object-fit:cover;height:150px;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between mb-2">
                            <h5 class="card-title mb-0">@c.Title</h5>
                            <small class="text-muted">@c.PricePerMonthLabel <span>@L["Teachers.PerMonth"]</span></small>
                        </div>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-area="Admin" asp-controller="OnlineCourses" asp-action="Details" asp-route-id="@c.Id" class="btn btn-outline-primary btn-sm flex-fill">
                                @(L["ReactiveCourse.Details&AddLessons"] ?? "Details")
                            </a>
                            <a asp-area="Admin" asp-controller="OnlineCourses" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-outline-secondary btn-sm">
                                @(L["Button.Edit"] ?? "Edit")
                            </a>

                            <form asp-area="Admin" asp-controller="OnlineCourses" asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('@(L["Admin.DeleteConfirm"] ?? " Are you sure?")');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@c.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">@(L["Button.Delete"] ?? "Delete")</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}




@model IEnumerable<Edu.Domain.Entities.Curriculum>
@using Edu.Domain.Entities
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Admin.Curricula"];
    var levelSelectList = ViewBag.LevelSelectList as SelectList;
    var levelMap = ViewBag.LevelDisplayMap as IDictionary<int, string> ?? new Dictionary<int, string>();
}

<div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mt-3 mb-3">
    <div>
        <h4 class="mb-1">@L["Admin.Curricula"]</h4>
        <div class="small text-muted">@L["Admin.CurriculaSubtitle"]</div>
    </div>

    <form method="get" id="levelFilterForm" class="d-flex align-items-center gap-2">
        <label class="small text-muted mb-0">@L["Admin.Level"]</label>

        @Html.DropDownList(
        "levelId",
                levelSelectList,
                L["Common.All"].Value ?? "All",
                new { @class = "form-select form-select-sm", onchange = "this.form.submit()" }
                )
    </form>

    <div>
        <a asp-action="Create" asp-area="Admin" class="btn btn-primary btn-sm px-3">
            @L["Admin.CreateCurriculum"] <i class="fas fa-plus-circle ms-1"></i>
        </a>
    </div>
</div>

<div class="row g-3">
    @foreach (var c in Model)
    {
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(c.CoverImageUrl))
                {
                    <img src="@c.CoverImageUrl" class="card-img-top" style="height:140px;object-fit:cover" />
                }

                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between mb-2">
                        <h5 class="card-title mb-0">@c.Title</h5>
                        <small class="text-muted">
                            @(levelMap.TryGetValue(c.LevelId, out var lvl) ? lvl : "—")
                        </small>
                    </div>

                    <p class="card-text text-muted small">@c.Description</p>

                    <div class="mt-auto d-flex gap-1">
                        <a asp-action="Details" asp-route-id="@c.Id" asp-area="Admin" class="btn btn-outline-primary btn-sm">@L["Button.View"]</a>
                        <a asp-action="Edit" asp-route-id="@c.Id" asp-area="Admin" class="btn btn-outline-secondary btn-sm">@L["Button.Edit"]</a>

                        <form asp-action="Delete" asp-route-id="@c.Id" asp-area="Admin" method="post" class="d-inline ms-auto"
                              onsubmit="return confirm('@L["Admin.ConfirmDelete"]');">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-danger">@L["Admin.Delete"]</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>







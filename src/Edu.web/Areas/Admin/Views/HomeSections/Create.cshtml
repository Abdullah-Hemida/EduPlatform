@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Admin.CreateSection"];
}

<div class="card">
    <div class="card-body">
        <h3 class="mb-3">@Localizer["Admin.CreateSection"]</h3>

        <form method="post" asp-action="Create">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">@Localizer["Admin.Order"]</label>
                <!-- name must match parameter 'order' in controller -->
                <input type="number" name="order" class="form-control" value="0" />
                <div class="form-text">@Localizer["Admin.OrderHint"]</div>
            </div>

            <div class="d-flex">
                <button type="submit" class="btn btn-primary">@Localizer["Admin.Create"] <i class="fas fa-plus-circle ms-1"></i></button>
                <a asp-action="Index" class="btn btn-light ms-2">@Localizer["Admin.Cancel"]</a>
            </div>
        </form>
    </div>
</div>



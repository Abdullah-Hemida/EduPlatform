@model List<Edu.Domain.Entities.FooterContact>
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L
@{
    var culture = ViewData["Culture"]?.ToString() ?? "en";
}
<div class="mb-3 mt-3 d-flex justify-content-between align-items-center">
    <h2>@L["Admin.FooterContacts"]</h2>
    <div class="ms-5 me-5">
        <a asp-action="Create" asp-route-culture="@culture" class="btn btn-primary ps-4 pe-4">@L["Admin.Create"] +</a>
    </div>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>@L["Admin.Order"]</th>
            <th>@L["Profile.DisplayNameLabel"]</th>
            <th>@L["Admin.Position"]</th>
            <th>@L["Admin.Contact"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var f in Model)
        {
            <tr>
                <td>@f.Order</td>
                <td>@f.PersonName</td>
                <td>@f.Position</td>
                <td>@f.Contact</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@f.Id" class="btn btn-sm btn-outline-primary">@L["Admin.Edit"]</a>
                    <a asp-action="Delete" asp-route-id="@f.Id" class="btn btn-sm btn-outline-danger">@L["Admin.Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>


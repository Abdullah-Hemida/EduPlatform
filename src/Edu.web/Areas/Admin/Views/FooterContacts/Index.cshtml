@model List<Edu.Domain.Entities.FooterContact>
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L
@{
    var culture = ViewData["Culture"]?.ToString() ?? "en";
}

<!-- Header -->
<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3 mt-3">
    <div>
        <h2 class="m-0">@L["Admin.FooterContacts"]</h2>
    </div>

    <div>
        <a asp-action="Create" asp-route-culture="@culture"
           class="btn btn-primary text-nowrap px-4">
            @L["Admin.Create"] <i class="fas fa-plus-circle ms-1"></i>
        </a>
    </div>
</div>

<!-- Table for md+ -->
<div class="table-responsive d-none d-md-block" aria-live="polite">
    <table class="table table-striped align-middle mb-0">
        <thead class="table-light small">
            <tr>
                <th style="width:80px">@L["Admin.Order"]</th>
                <th>@L["Profile.DisplayNameLabel"]</th>
                <th>@L["Admin.Position"]</th>
                <th>@L["Admin.Contact"]</th>
                <th style="width:170px" class="text-end">@L["Admin.Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center small text-muted">
                        @L["Admin.NoRecords"]
                    </td>
                </tr>
            }
            else
            {
                foreach (var f in Model)
                {
                    <tr>
                        <td class="small text-muted">@f.Order</td>
                        <td>@f.PersonName</td>
                        <td>@f.Position</td>
                        <td>@f.Contact</td>
                        <td class="text-end text-nowrap">
                            <a asp-action="Edit" asp-route-id="@f.Id" class="btn btn-sm btn-outline-primary me-1">
                                @L["Admin.Edit"]
                            </a>
                            <a asp-action="Delete" asp-route-id="@f.Id" class="btn btn-sm btn-outline-danger">
                                @L["Admin.Delete"]
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<!-- Cards for small screens -->
<div class="d-md-none">
    @if (!Model.Any())
    {
        <div class="small text-center text-muted py-3">@L["Admin.NoRecords"]</div>
    }
    else
    {
        <div class="row g-2">
            @foreach (var f in Model)
            {
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <div class="small text-muted">@L["Admin.Order"]</div>
                                    <div class="fw-semibold">@f.Order</div>
                                </div>

                                <div class="text-end">
                                    <div class="small text-muted">@L["Profile.DisplayNameLabel"]</div>
                                    <div class="fw-semibold">@f.PersonName</div>
                                </div>
                            </div>

                            <div class="mb-2">
                                <div class="small text-muted">@L["Admin.Position"]</div>
                                <div>@f.Position</div>
                            </div>

                            <div>
                                <div class="small text-muted">@L["Admin.Contact"]</div>
                                <div>@f.Contact</div>
                            </div>
                        </div>

                        <div class="card-footer bg-white d-flex gap-2 justify-content-end">
                            <a asp-action="Edit" asp-route-id="@f.Id" class="btn btn-sm btn-outline-primary">
                                @L["Admin.Edit"]
                            </a>
                            <a asp-action="Delete" asp-route-id="@f.Id" class="btn btn-sm btn-outline-danger">
                                @L["Admin.Delete"]
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>




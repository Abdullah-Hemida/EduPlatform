@model Edu.Domain.Entities.FooterContact
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

<h2>@L["Admin.CreateFooterContact"]</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">@L["Profile.DisplayNameLabel"]</label>
        <input asp-for="PersonName" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">@L["Admin.Position"]</label>
        <input asp-for="Position" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">@L["Admin.Contact"]</label>
        <input asp-for="Contact" class="form-control" />
        <div class="form-text">@L["Footer.ContactHelp"]</div>
    </div>

    <div class="mb-3">
        <label class="form-label">@L["Admin.Order"]</label>
        <input asp-for="Order" class="form-control" />
    </div>

    <input asp-for="Culture" type="hidden" />

    <button type="submit" class="btn btn-primary">@L["Admin.Create"]</button>
    <a asp-action="Index" asp-route-culture="@Model.Culture" class="btn btn-light">@L["Admin.Cancel"]</a>
</form>


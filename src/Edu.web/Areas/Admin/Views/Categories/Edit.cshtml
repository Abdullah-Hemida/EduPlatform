@model Edu.Web.Areas.Admin.ViewModels.CategoryEditVm
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

<h3 class="mb-3">@L["Admin.AddCategory"]</h3>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="NameEn" class="form-label">@L["AdminCategory.NameEn"]</label>
            <input asp-for="NameEn" class="form-control" />
            <span asp-validation-for="NameEn" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="NameIt" class="form-label">@L["AdminCategory.NameIt"]</label>
            <input asp-for="NameIt" class="form-control" />
            <span asp-validation-for="NameIt" class="text-danger small"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="NameAr" class="form-label">@L["AdminCategory.NameAr"]</label>
            <input asp-for="NameAr" class="form-control" dir="rtl" />
            <span asp-validation-for="NameAr" class="text-danger small"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success me-2">@L["Admin.Create"] <i class="fas fa-plus-circle ms-1"></i></button>
        <a asp-action="Index" class="btn btn-secondary">@L["Button.Cancel"]</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



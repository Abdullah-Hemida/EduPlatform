@model IEnumerable<Edu.Domain.Entities.Category>
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
     
    ViewData["Title"] = L["Admin.Categories"];
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 gap-md-3 mb-3">

    <!-- Title + Subtitle -->
    <div>
        <h4 class="mb-0">@L["Admin.Categories"]</h4>
        <small class="text-muted">@L["Admin.CategoriesSubtitle"]</small>
    </div>

    <!-- Add Button -->
    <a asp-action="Create" class="btn btn-primary btn-sm text-nowrap">
        @L["Admin.AddCategory"]
        <i class="fas fa-plus-circle ms-1"></i>
    </a>
</div>


@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-sm">
    <thead class="table-light"><tr><th>#</th><th>@L["Admin.Name"]</th><th style="width:160px"></th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@c.Id">@L["Button.Edit"]</a>
                    <form method="post" asp-action="Delete" asp-route-id="@c.Id" class="d-inline" onsubmit="return confirm('@L["Admin.ConfirmDeleteCategory"]');">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-sm btn-danger">@L["Admin.Delete"]</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


@model Edu.Web.Areas.Admin.ViewModels.AdminEnrollmentIndexVm
@using System.Globalization
@using System.Text.Json
@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["Admin.ReactiveEnrollments.Title"];
}

<h1>@ViewData["Title"]</h1>

<div class="row mb-3">
    <div class="col-md-8">
        <form method="get" class="d-flex gap-2" id="searchForm">
            <input name="q" value="@Model.Query" class="form-control" placeholder="@L["Admin.Search.Placeholder"]" />
            <select name="pageSize" class="form-select" style="width:110px">
                <option value="10" selected="@(Model.PageSize == 10 ? "selected" : null)">10</option>
                <option value="20" selected="@(Model.PageSize == 20 ? "selected" : null)">20</option>
                <option value="50" selected="@(Model.PageSize == 50 ? "selected" : null)">50</option>
            </select>
            <button class="btn btn-primary">@L["Admin.Search.Button"]</button>
        </form>
    </div>

    <div class="col-md-4 text-end">
        <form id="delete-old-form" class="d-inline-flex align-items-center gap-2">
            <input type="date" id="olderThan" class="form-control form-control-sm" />
            <button id="btnDeleteOld" class="btn btn-danger btn-sm text-nowrap">@L["Admin.DeleteOld.Button"]</button>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="width:20px">#</th>
            <th>@L["Admin.Course"]</th>
            <th>@L["Admin.Teacher"]</th>
            <th>@L["Admin.Student"]</th>
            <th>@L["Admin.Created"]</th>
            <th>@L["Admin.Paid"]</th>
            <th>@L["Admin.Pending"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            var idx = (Model.Page - 1) * Model.PageSize;
        }
        @foreach (var it in Model.Items)
        {
            idx++;
            <tr data-enrollment-id="@it.EnrollmentId">
                <td class="small text-muted">@idx</td>
                <td>@it.CourseTitle</td>
                <td>@it.TeacherFullName</td>
                <td>
                    <div class="d-flex align-items-center gap-2">
                        @if (!string.IsNullOrEmpty(it.StudentPhotoUrl))
                        {
                            <img src="@it.StudentPhotoUrl" width="40" height="40" class="rounded-circle" alt="photo" />
                        }
                        <div>
                            <div>@it.StudentFullName</div>
                            <div class="small text-muted">@it.StudentEmail<br />@it.StudentPhone</div>
                        </div>
                    </div>
                </td>
                <td>@it.CreatedAtUtc.ToLocalTime().ToString("g")</td>
                <td>@it.PaidMonthsCount</td>
                <td>@it.PendingMonthsCount</td>
                <td class="text-end text-nowrap m-2">
                    <a asp-area="Admin" asp-controller="ReactiveEnrollments" asp-action="Details" asp-route-id="@it.EnrollmentId" class="btn btn-sm btn-outline-primary">@L["Admin.Details"]</a>
                    <button class="btn btn-sm btn-outline-danger btn-delete-enrollment" data-enrollment-id="@it.EnrollmentId">@L["Admin.Delete"]</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @{
            var current = Model.Page;
            var total = Model.TotalPages;
            string q = Model.Query ?? "";
            for (int p = 1; p <= total; p++)
            {
                <li class="page-item @(p == current ? "active" : "")">
                    <a class="page-link" href="?q=@Uri.EscapeDataString(q)&page=@p&pageSize=@Model.PageSize">@p</a>
                </li>
            }
        }
    </ul>
</nav>

<div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index:2050">
    <div id="toast-container-admin"></div>
</div>

@{
    // localized strings for JavaScript
    var jsTexts = JsonSerializer.Serialize(new
    {
        confirmDelete = L["Admin.Enrollment.ConfirmDelete"].Value,
        deleteSuccess = L["Admin.Enrollment.DeleteSuccess"].Value,
        deleteError = L["Admin.Enrollment.DeleteError"].Value ?? L["Admin.Common.Error"].Value,
        deleteOldPickDate = L["Admin.DeleteOld.PickDate"].Value,
        deleteOldConfirm = L["Admin.DeleteOld.Confirm"].Value,
        deleteOldSuccess = L["Admin.DeleteOldSuccess"].Value,
        commonError = L["Admin.Common.Error"].Value
    });
}

@section Scripts {
    <script>
        $(function () {
            // localized texts (JSON serialized server-side)
            const texts = @Html.Raw(jsTexts);

            // prefer explicit antiforgery token element when available
            const anti = $('input[name="__RequestVerificationToken"]').first().val();

            function showToast(msg, type='success') {
                const $c = $('#toast-container-admin');
                const $t = $(`<div class="toast text-bg-${type} border-0" role="alert"><div class="d-flex"><div class="toast-body">${msg}</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div></div>`);
                $c.append($t);
                new bootstrap.Toast($t[0], { delay: 3500 }).show();
                $t.on('hidden.bs.toast', () => $t.remove());
            }

            // single-enrollment delete
            $(document).on('click', '.btn-delete-enrollment', function () {
                const id = $(this).data('enrollment-id');
                if (!confirm(texts.confirmDelete)) return;
                $.ajax({
                    url: '/Admin/ReactiveEnrollments/Delete',
                    method: 'POST',
                    data: { enrollmentId: id, __RequestVerificationToken: anti },
                    success: function (res) {
                        if (res && res.success) {
                            showToast(res.message || texts.deleteSuccess, 'success');
                            $(`tr[data-enrollment-id="${id}"]`).remove();
                        } else {
                            showToast(res?.message || texts.deleteError, 'danger');
                        }
                    },
                    error: function () { showToast(texts.deleteError, 'danger'); }
                });
            });

            // delete old enrollments
            $('#btnDeleteOld').on('click', function (e) {
                e.preventDefault();
                const dateVal = $('#olderThan').val();
                if (!dateVal) { showToast(texts.deleteOldPickDate, 'danger'); return; }
                if (!confirm(texts.deleteOldConfirm)) return;
                const dt = new Date(dateVal + 'T00:00:00Z');
                $.ajax({
                    url: '/Admin/ReactiveEnrollments/DeleteOld',
                    method: 'POST',
                    data: { olderThanUtc: dt.toISOString(), __RequestVerificationToken: anti },
                    success: function (res) {
                        if (res && res.success) {
                            showToast(res.message || texts.deleteOldSuccess, 'success');
                            setTimeout(() => location.reload(), 700);
                        } else {
                            showToast(res?.message || texts.deleteError, 'danger');
                        }
                    },
                    error: function () { showToast(texts.deleteError, 'danger'); }
                });
            });
        });
    </script>
}








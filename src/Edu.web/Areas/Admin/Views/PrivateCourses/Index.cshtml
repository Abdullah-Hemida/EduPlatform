
@model PrivateCourseIndexVm

@inject Microsoft.Extensions.Localization.IStringLocalizer<SharedResource> L
@{
     
    ViewData["Title"] = L["Admin.PrivateCourses"] ?? "Private Courses";
}

<div class="mb-3 mt-3">
    <form method="get" id="filterForm" class="row g-2 align-items-end">
        <!-- Search -->
        <div class="col-12 col-sm-6 col-md-3">
            <input name="q" value="@Model.Query"
                   class="form-control form-control-sm"
                   placeholder="@L["Admin.SearchPlaceholder"]" />
        </div>

        <!-- Category (explicit All option + cached items) -->
        <div class="col-12 col-sm-6 col-md-3">
<select id="categoryFilter" name="categoryId" class="form-select form-select-sm" onchange="submitFilter(this)">
    <option value="">@L["Common.All"]</option>
    @foreach (var it in (List<SelectListItem>)ViewBag.CategorySelect)
    {
        if (Model.CategoryId?.ToString() == it.Value)
        {
            <option value="@it.Value" selected>@it.Text</option>
        }
        else
        {
            <option value="@it.Value">@it.Text</option>
        }
    }
</select>

        </div>

        <!-- Published -->
        <div class="col-12 col-sm-6 col-md-2">
<select id="publishedFilter" name="showPublished" class="form-select form-select-sm" onchange="submitFilter(this)">
    <option value="">@L["Common.All"]</option>
    @foreach (var it in (List<SelectListItem>)ViewBag.ShowPublishedSelect)
    {
        var current = Model.ShowPublished.HasValue ? (Model.ShowPublished.Value ? "true" : "false") : "";
        if (current == it.Value)
        {
            <option value="@it.Value" selected>@it.Text</option>
        }
        else
        {
            <option value="@it.Value">@it.Text</option>
        }
    }
</select>

        </div>

        <!-- For Children -->
        <div class="col-12 col-sm-6 col-md-2">
    <select id="childrenFilter" name="forChildren" class="form-select form-select-sm" onchange="submitFilter(this)">
    <option value="">@L["Common.All"]</option>
    @foreach (var it in (List<SelectListItem>)ViewBag.ForChildrenSelect)
    {
        var current = Model.ForChildren.HasValue ? (Model.ForChildren.Value ? "true" : "false") : "";
        if (current == it.Value)
        {
            <option value="@it.Value" selected>@it.Text</option>
        }
        else
        {
            <option value="@it.Value">@it.Text</option>
        }
    }
</select>
        </div>

        <!-- Hidden Keep ShowAll -->
        @if (Model.ShowAll)
        {
            <input type="hidden" name="showAll" value="true" />
        }

        <!-- Buttons -->
        <div class="col-12 col-md-auto d-flex flex-wrap gap-2">
            <button class="btn btn-primary btn-sm px-3">@L["Admin.Search"]</button>

            <a class="btn btn-outline-secondary btn-sm text-nowrap" href="@Url.Action("Index", "PrivateCourses", new { area = "Admin" })">
                @L["Admin.Reset"]
            </a>

            @if (!Model.ShowAll)
            {
                <a class="btn btn-outline-info btn-sm text-nowrap"
                   href="@Url.Action("Index", "PrivateCourses", new { area = "Admin", q = Model.Query, categoryId = Model.CategoryId, showPublished = Model.ShowPublished, showAll = true })">
                    @(L["Admin.ShowAll"] ?? "Show all")
                </a>
            }
            else
            {
                <a class="btn btn-outline-secondary btn-sm text-nowrap"
                   href="@Url.Action("Index", "PrivateCourses", new { area = "Admin" })">
                    @(L["Admin.ShowOnlyRequests"] ?? "Show only requests")
                </a>
            }
        </div>
    </form>
</div>

<div class="row g-3">
    @foreach (var c in Model.Courses)
    {
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(c.PublicCoverUrl))
                {
                    <img src="@c.PublicCoverUrl" alt="@c.Title" class="card-img-top" style="height:140px;object-fit:cover" />
                }

                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <h5 class="card-title mb-0">@c.Title</h5>
                        <small class="text-muted ms-2">@c.PriceLabel</small>
                    </div>

                    <p class="card-text text-muted small mb-3">@c.CategoryName</p>

                    <div class="mt-auto d-flex gap-1 align-items-center">
                        <a asp-action="Details" asp-route-id="@c.Id" asp-area="Admin" class="btn btn-outline-primary btn-sm">@L["Button.View"]</a>

                        <form asp-action="Delete" asp-route-id="@c.Id" asp-area="Admin" method="post" class="d-inline ms-auto" onsubmit="return confirm('@L["Admin.ConfirmDelete"]');">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-sm btn-danger">@L["Admin.Delete"]</button>
                        </form>

                        <button class="btn btn-sm @(c.IsPublished ? "btn-warning" : "btn-success") toggle-publish-btn ms-2" data-id="@c.Id">
                            @(c.IsPublished? L["Admin.Unapprove"] : L["Button.Approve"])
                        </button>
                    </div>

                    <div class="mt-2 small text-muted">
                        @L["Role.Teacher"] : @(c.TeacherName ?? "(unknown)")

                    </div>

                    @if (c.IsPublishRequested)
                    {
                        <span class="badge bg-info ms-2">@(L["Admin.PublishRequested"] ?? "Publish requested")</span>
                    }

                    @if (c.IsForChildren)
                    {
                        <span class="badge bg-primary ms-2 mt-2">@(L["Teacher.ForChildren"] ?? "For children")</span>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Courses != null)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination">
            <li class="page-item @(Model.Courses.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.Courses.PageIndex - 1, q = Model.Query, categoryId = Model.CategoryId, showPublished = Model.ShowPublished, showAll = Model.ShowAll })">&laquo;</a>
            </li>
            @for (int i = 1; i <= Model.Courses.TotalPages; i++)
            {
                <li class="page-item @(Model.Courses.PageIndex == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, q = Model.Query, categoryId = Model.CategoryId, showPublished = Model.ShowPublished, showAll = Model.ShowAll })">@i</a>
                </li>
            }
            <li class="page-item @(Model.Courses.HasNextPage ? "" : "disabled")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.Courses.PageIndex + 1, q = Model.Query, categoryId = Model.CategoryId, showPublished = Model.ShowPublished, showAll = Model.ShowAll })">&raquo;</a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <script>
        (function () {
            // CSRF token (keeps your existing meta approach)
            var tokenMeta = document.querySelector('meta[name="csrf-token"]');
            var token = tokenMeta ? tokenMeta.getAttribute('content') : '';

            // Localized strings (serialized server-side to a safe JSON literal)
            const Localized = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(new {
                UnapproveTeacher = L["Admin.UnapproveTeacher"].Value ?? L["Admin.Unapprove"].Value ?? "Unapprove",
                ApproveTeacher = L["Admin.ApproveTeacher"].Value ?? L["Button.Approve"].Value ?? "Approve",
                OperationFailed = L["Admin.OperationFailed"].Value ?? "Operation failed",
                ServerError = L["Admin.ServerError"].Value ?? "Server error"
            }));

            function postToggle(id, btn) {
                fetch('@Url.Action("TogglePublish", "PrivateCourses", new { area = "Admin" })?id=' + encodeURIComponent(id), {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token,
                        'Accept': 'application/json'
                    }
                }).then(function (r) {
                    if (!r.ok) throw new Error('network');
                    return r.json();
                }).then(function (data) {
                    if (data && data.success) {
                        if (data.isPublished) {
                            btn.classList.remove('btn-success');
                            btn.classList.add('btn-warning');
                            btn.textContent = Localized.UnapproveTeacher;
                        } else {
                            btn.classList.remove('btn-warning');
                            btn.classList.add('btn-success');
                            btn.textContent = Localized.ApproveTeacher;
                        }
                    } else {
                        var msg = (data && data.message) ? data.message : Localized.OperationFailed;
                        alert(msg);
                    }
                }).catch(function () {
                    alert(Localized.ServerError);
                });
            }

            document.querySelectorAll('.toggle-publish-btn').forEach(function (b) {
                b.addEventListener('click', function () {
                    var id = b.getAttribute('data-id');
                    postToggle(id, b);
                });
            });
        })();

                // Submit the form while preserving other params (search, showAll, page etc.)
        function submitFilter(el) {
            const form = document.getElementById('filterForm');
            if (!form) return;

            // we do a plain submit which preserves other named inputs in the form
            form.submit();
        }

        // Optional: wire Enter key on search to submit
        document.querySelectorAll('#filterForm input[name="q"]').forEach(function (inp) {
            inp.addEventListener('keydown', function (ev) {
                if (ev.key === 'Enter') {
                    ev.preventDefault();
                    document.getElementById('filterForm').submit();
                }
            });
        });
    </script>
}



